@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="utf-8" />
    <title>Admin Dashboard</title>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <style>
        body {
            min-height: 100vh;
            display: flex;
        }

        .sidebar {
            width: 250px;
            background-color: #212529;
            color: white;
            padding: 20px;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 8px 0;
            }

                .sidebar a:hover {
                    background-color: #343a40;
                    padding-left: 10px;
                }

        .content {
            flex: 1;
            padding: 30px;
            background-color: #f8f9fa;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h4 class="mb-4">Admin Panel</h4>

        <a asp-controller="Admin" asp-action="Dashboard">Dashboard</a>

        <hr />

        <strong>المقالات</strong>
        <a asp-controller="Articles" asp-action="Index">عرض المقالات</a>
        <a asp-controller="Articles" asp-action="Create">إضافة مقال</a>

        <hr />

        <strong>الأعضاء</strong>
        <a asp-controller="Team" asp-action="Index">عرض الأعضاء</a>
        <a asp-controller="Team" asp-action="Create">إضافة عضو</a>

        <hr />

        <strong>الفرص</strong>
        <a asp-controller="Opportunity" asp-action="Index">عرض الفرص</a>
        <a asp-controller="Opportunity" asp-action="Create">إضافة فرصة</a>

        <hr />

        <!-- Logout -->
        <form asp-controller="Account" asp-action="Logout" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger w-100">
                تسجيل الخروج
            </button>
        </form>
    </div>

    <!-- Main Content -->
    <div class="content">
        <h2>مرحبًا بك في لوحة تحكم الأدمن 👋</h2>
        <p class="text-muted">
            من هنا يمكنك إدارة الموقع بالكامل (مقالات – أعضاء – فرص).
        </p>
    </div>

</body>
</html>
