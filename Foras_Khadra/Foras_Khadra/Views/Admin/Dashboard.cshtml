@model Foras_Khadra.ViewModels.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="utf-8" />
    <title>Admin Dashboard</title>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <style>
        body {
            min-height: 100vh;
            display: flex;
            background-color: #f8f9fa;
        }

        .sidebar {
            width: 250px;
            background-color: #212529;
            color: white;
            padding: 20px;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 8px 0;
            }

                .sidebar a:hover {
                    background-color: #343a40;
                    padding-left: 10px;
                }

        .content {
            flex: 1;
            padding: 30px;
        }

        .stats-card {
            cursor: pointer;
            transition: transform 0.2s;
        }

            .stats-card:hover {
                transform: scale(1.05);
            }

            .stats-card .card-body {
                text-align: center;
            }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h4 class="mb-4">Admin Panel</h4>

        <a asp-controller="Admin" asp-action="Dashboard">Dashboard</a>

        <hr />

        <strong>المقالات</strong>
        <a asp-controller="Articles" asp-action="Index">عرض المقالات</a>
        <a asp-controller="Articles" asp-action="Create">إضافة مقال</a>

        <hr />

        <strong>الأعضاء</strong>
        <a asp-controller="Team" asp-action="Index">عرض الأعضاء</a>
        <a asp-controller="Team" asp-action="Create">إضافة عضو</a>

        <hr />

        <strong>الفرص</strong>
        <a asp-controller="Opportunity" asp-action="Index">عرض الفرص</a>
        <a asp-controller="Opportunity" asp-action="Create">إضافة فرصة</a>

        <hr />

        <!-- Logout -->
        <form asp-controller="Account" asp-action="Logout" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger w-100">
                تسجيل الخروج
            </button>
        </form>
    </div>

    <!-- Main Content -->
    <div class="content">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>مرحبًا بك في لوحة تحكم الأدمن</h2>
            <form asp-controller="Account" asp-action="Logout" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-outline-danger">
                    تسجيل الخروج
                </button>
            </form>
        </div>

        <p class="text-muted mb-4">
            من هنا يمكنك إدارة الموقع بالكامل (مقالات – أعضاء – فرص – منظمات – طلبات الريلز).
        </p>

        <!-- Stats Cards -->
        <div class="row g-4">
            <div class="col-md-3">
                <div class="card stats-card text-bg-primary"
                     onclick="location.href='@Url.Action("OrganizationsList", "Admin")'">
                    <div class="card-body">
                        <h5 class="card-title">المنظمات</h5>
                        <p class="card-text display-6">@Model.TotalOrganizations</p>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card stats-card text-bg-success"
                     onclick="location.href='@Url.Action("Index", "Team")'">
                    <div class="card-body">
                        <h5 class="card-title">الأعضاء</h5>
                        <p class="card-text display-6">@Model.TotalUsers</p>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card stats-card text-bg-warning"
                     onclick="location.href='@Url.Action("Index", "Opportunity")'">
                    <div class="card-body">
                        <h5 class="card-title">الفرص</h5>
                        <p class="card-text display-6">@Model.TotalOpportunities</p>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card stats-card text-bg-info"
                     onclick="location.href='@Url.Action("Index", "Articles")'">
                    <div class="card-body">
                        <h5 class="card-title">المقالات</h5>
                        <p class="card-text display-6">@Model.TotalArticles</p>
                    </div>
                </div>
            </div>

            <!-- ======= كروت طلبات الريلز ======= -->
            <!-- الكارد الطلبات المستلمة -->
            <div class="col-md-3">
                <div class="card stats-card text-bg-secondary"
                     onclick="location.href='@Url.Action("ReelsRequestsDashboard", "Admin")'">
                    <div class="card-body">
                        <h5 class="card-title">الطلبات المستلمة</h5>
                        <p class="card-text display-6">@Model.TotalReelsRequests</p>
                    </div>
                </div>
            </div>

            <!-- الكارد جاري العمل عليها -->
            <div class="col-md-3">
                <div class="card stats-card text-bg-warning"
                     onclick="location.href='@Url.Action("ReelsRequestsDashboard", "Admin", new { status = "pending" })'">
                    <div class="card-body">
                        <h5 class="card-title">جاري العمل عليها</h5>
                        <p class="card-text display-6">@Model.PendingReelsRequests</p>
                    </div>
                </div>
            </div>

            <!-- الكارد تم الانتهاء -->
            <div class="col-md-3">
                <div class="card stats-card text-bg-success"
                     onclick="location.href='@Url.Action("ReelsRequestsDashboard", "Admin", new { status = "completed" })'">
                    <div class="card-body">
                        <h5 class="card-title">تم الانتهاء</h5>
                        <p class="card-text display-6">@Model.CompletedReelsRequests</p>
                    </div>
                </div>
            </div>

            <!-- الكارد المرفوضة -->
            <div class="col-md-3">
                <div class="card stats-card text-bg-danger"
                     onclick="location.href='@Url.Action("ReelsRequestsDashboard", "Admin", new { status = "rejected" })'">
                    <div class="card-body">
                        <h5 class="card-title">مرفوضة</h5>
                        <p class="card-text display-6">@Model.RejectReelsRequests</p>
                    </div>
                </div>
            </div>



        </div>
    </div>

</body>
</html>
