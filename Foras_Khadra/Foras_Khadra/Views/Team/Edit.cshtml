@model Foras_Khadra.ViewModels.TeamMemberEditViewModel

<h2>تعديل العضو</h2>

<link href="https://cdn.jsdelivr.net/npm/quill@1.3.7/dist/quill.snow.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/quill@1.3.7/dist/quill.min.js"></script>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Edit" method="post" enctype="multipart/form-data"
      onsubmit="tinymce.triggerSave();">    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-2">
        <label asp-for="NameAr"></label>
        <input asp-for="NameAr" class="form-control" />
        <span asp-validation-for="NameAr" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="NameEn"></label>
        <input asp-for="NameEn" class="form-control" />
        <span asp-validation-for="NameEn" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="NameFr"></label>
        <input asp-for="NameFr" class="form-control" />
        <span asp-validation-for="NameFr" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Gender"></label>
        <select asp-for="Gender" class="form-control"
                asp-items="Html.GetEnumSelectList<Foras_Khadra.Models.GenderType>()">
            <option value="">اختر جنس العضو</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Membership"></label>
        <select asp-for="Membership" class="form-control"
                asp-items="Html.GetEnumSelectList<Foras_Khadra.Models.MembershipType>()">
            <option value="">اختر العضوية</option>
        </select>
        <span asp-validation-for="Membership" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Department"></label>
        <select asp-for="Department" class="form-control"
                asp-items="Html.GetEnumSelectList<Foras_Khadra.Models.Department>()">
            <option value="">اختر القسم</option>
        </select>
        <span asp-validation-for="Department" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <div class="form-group mb-2">
            <label>البيو بالعربي</label>
            <div id="editorAr" style="height:300px"></div>
            <input type="hidden" asp-for="BioAr" id="BioAr" />
            <span asp-validation-for="BioAr" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label>البيو بالانجليزي</label>
            <div id="editorEn" style="height:300px"></div>
            <input type="hidden" asp-for="BioEn" id="BioEn" />
            <span asp-validation-for="BioEn" class="text-danger"></span>
        </div>

        
        <div class="form-group mb-2">
            <label> البيو بالفرنسي</label>
            <div id="editorFr" style="height:300px"></div>
            <input type="hidden" asp-for="BioFr" id="BioFr" />
            <span asp-validation-for="BioFr" class="text-danger"></span>
        </div>


        
    </div>

    <div class="form-group mb-2">
        <label>الصورة الحالية</label><br />
        @if (!string.IsNullOrEmpty(ViewBag.ExistingImage as string))
        {
            <img src="@ViewBag.ExistingImage" width="150" />
        }
        else
        {
            <p>لا توجد صورة حالية.</p>
        }
    </div>

    <div class="form-group mb-2">
        <label>رفع صورة جديدة (اختياري)</label>
        <input type="file" name="ImageFile" class="form-control" accept=".jpg,.jpeg,.png" />
    </div>

    <div class="form-group mt-2 d-flex gap-2">
        <button type="submit" class="btn btn-success flex-fill">حفظ التعديلات</button>
        <a asp-action="Index" class="btn btn-secondary flex-fill">العودة للقائمة</a>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        var toolbarOptions = [
            [{ header: [1, 2, false] }],
            ['bold', 'italic', 'underline'],
            [{ list: 'ordered' }, { list: 'bullet' }],
            ['link'],
            ['clean'],
            [{ align: [] }]
        ];

        // Arabic (RTL)
        var quillAr = new Quill('#editorAr', {
            theme: 'snow',
            modules: { toolbar: toolbarOptions }
        });
        quillAr.root.setAttribute('dir', 'rtl');
        quillAr.root.innerHTML = `@Html.Raw(Model.BioAr ?? "")`;

        // English
        var quillEn = new Quill('#editorEn', {
            theme: 'snow',
            modules: { toolbar: toolbarOptions }
        });
        quillEn.root.setAttribute('dir', 'ltr');
        quillEn.root.innerHTML = `@Html.Raw(Model.BioEn ?? "")`;

        // French
        var quillFr = new Quill('#editorFr', {
            theme: 'snow',
            modules: { toolbar: toolbarOptions }
        });
        quillFr.root.setAttribute('dir', 'ltr');
        quillFr.root.innerHTML = `@Html.Raw(Model.BioFr ?? "")`;

        // On submit
        document.querySelector('form').addEventListener('submit', function () {
            document.getElementById('BioAr').value = quillAr.root.innerHTML;
            document.getElementById('BioEn').value = quillEn.root.innerHTML;
            document.getElementById('BioFr').value = quillFr.root.innerHTML;
        });
    </script>

}
