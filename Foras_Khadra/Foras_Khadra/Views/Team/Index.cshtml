@model IEnumerable<Foras_Khadra.Models.TeamMember>

<div class="d-flex align-items-center justify-content-between mb-3">
    <h2>أعضاء الفريق</h2>
    <div>
        <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-secondary me-2">
            العودة للوحة التحكم
        </a>
        <a asp-action="Create" class="btn btn-primary">
            إضافة عضو جديد
        </a>
    </div>
</div>

@foreach (var group in Model.GroupBy(m => m.Department))
{
    <h3>@group.Key</h3> <!-- اسم القسم -->

    <table class="table table-bordered mb-4">
        <thead>
            <tr>
                <th>صورة</th>
                <th>الاسم</th>
                <th>نوع العضوية</th>
                <th>خيارات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in group.OrderByDescending(m => m.Membership)) 
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(member.ImagePath))
                        {
                            <img src="@member.ImagePath" width="80" />
                        }
                    </td>
                    <td>@member.NameAr - @member.NameEn</td>
                    <td>@member.Membership</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@member.Id" class="btn btn-info btn-sm">عرض</a>
                        <a asp-action="Edit" asp-route-id="@member.Id" class="btn btn-warning btn-sm">تعديل</a>
                        <form asp-action="Delete" asp-route-id="@member.Id" method="post" style="display:inline"
                              onsubmit="return confirm('هل تريد الحذف؟');">
                            <button type="submit" class="btn btn-danger btn-sm">حذف</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}