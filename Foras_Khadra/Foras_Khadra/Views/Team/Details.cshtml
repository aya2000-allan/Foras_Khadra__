@model Foras_Khadra.Models.TeamMember

<h2>تفاصيل العضو</h2>

<div>
    <p><strong>الاسم:</strong> @Model.Name</p>
    <p><strong>نوع العضوية:</strong> @Model.Membership</p>
    <p><strong>القسم:</strong> @Model.Department</p>
    <p><strong>البيو:</strong> @Html.Raw(Model.Bio)</p>
    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <p><strong>صورة العضو:</strong><br /><img src="@Model.ImagePath" width="200" /></p>
    }
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">تعديل</a>
    <a asp-action="Index" class="btn btn-secondary">العودة للقائمة</a>
</p>
