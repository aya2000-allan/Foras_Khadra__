@using Microsoft.Extensions.Options;
@using System.Globalization;
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["PageTitle"];
    var culture = System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
    var dir = culture == "ar" ? "rtl" : "ltr";

}
<div class="auth-message" dir="@dir">
    <div class="auth-message-icon">
        <div class="auth-icon-wrap">
            <svg width="64" height="64" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                <circle cx="12" cy="12" r="10" stroke="#2E7D32" stroke-width="2"/>
                <path d="M7 12.5l3 3 7-7" stroke="#2E7D32" stroke-width="2"
                      stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
        </div>
    </div>

    <h2 class="auth-message-title">@Localizer["MessageTitle"]</h2>

    <p class="auth-message-text">
        @Localizer["MessageText"]
    </p>

    <a asp-action="Login" asp-controller="Account" class="auth-message-link">
        @Localizer["MessageLink"]
    </a>
</div>
<style>
    .auth-message{
    max-width: 460px;
    margin: 40px auto;
    background:#fff;
    border-radius:18px;
    padding: 34px 26px 30px;
    text-align:center;
    box-shadow:0 12px 30px rgba(0,0,0,.08);
    font-family:"Tajawal","Cairo",system-ui,-apple-system,"Segoe UI",Arial,sans-serif;
}

.auth-message-icon{
    display:flex;
    justify-content:center;
    margin-bottom: 14px;
}

/* دائرة خلف الأيقونة */
.auth-icon-wrap{
    width: 92px;
    height: 92px;
    border-radius: 50%;
    background: #dff2e2;           /* أخضر فاتح */
    display:flex;
    align-items:center;
    justify-content:center;
}

.auth-message-title{
    margin: 6px 0 0;
    font-size: 26px;
    font-weight: 800;
    color:#25652C;
}

.auth-message-text{
    margin: 14px 0 18px;
    font-size: 14px;
    line-height: 1.9;
    color:#5f6f66;
}

/* رابط بشكل زر خفيف (اختياري) */
.auth-message-link{
    display:inline-block;
    margin-top: 4px;
    font-weight: 800;
    color:#fff;

    text-decoration:none;
    padding: 10px 14px;
    border-radius: 10px;
    border: 1px solid #dfe7e2;
    background: #F99D27;
}
.auth-message-link:hover{
    background: #ef981d;
    text-decoration:none;
    color:#fff;
}

/* موبايل */
@@media (max-width: 480px){
    .auth-message{
        padding: 26px 18px;
    }
    .auth-message-title{
        font-size: 22px;
    }
    .auth-icon-wrap{
        width: 84px;
        height: 84px;
    }
}
</style>