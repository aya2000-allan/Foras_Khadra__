@model Foras_Khadra.Models.EditProfileViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container mt-5">
    <h2 class="mb-4 text-center">إعدادات الملف الشخصي</h2>

    <div class="row">
        <!-- التاب الجانبي -->
        <div class="col-md-3 mb-3">
            <div class="nav flex-column nav-pills" id="profile-tabs">
                <button class="nav-link active" data-bs-toggle="pill" data-bs-target="#viewProfile">
                    عرض الملف الشخصي
                </button>
                <button class="nav-link" data-bs-toggle="pill" data-bs-target="#editProfile">
                    تعديل الملف الشخصي
                </button>
            </div>
        </div>

        <!-- المحتوى -->
        <div class="col-md-9">
            <div class="tab-content">

                <!-- 👁️ عرض البروفايل -->
                <div class="tab-pane fade show active" id="viewProfile">
                    <div class="card">
                        <div class="card-body">
                            <p><strong>الاسم:</strong> @Model.FirstName @Model.LastName</p>
                            <p><strong>البريد الإلكتروني:</strong> @Model.Email</p>
                            <p><strong>الدولة:</strong> @Model.Country</p>
                            <p><strong>الجنسية:</strong> @Model.Nationality</p>

                            <p><strong>الاهتمامات:</strong></p>
                            <ul>
                                @foreach (var i in Model.Interests)
                                {
                                    <li>@i</li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- ✏️ تعديل البروفايل -->
                <div class="tab-pane fade" id="editProfile">
                    <form asp-action="ProfileSettings" method="post">
                        @Html.AntiForgeryToken()

                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success">
                                @TempData["Success"]
                            </div>
                        }

                        <div class="row mb-3">
                            <div class="col">
                                <label asp-for="FirstName"></label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col">
                                <label asp-for="LastName"></label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col">
                                <label asp-for="Country"></label>
                                <select asp-for="Country" class="form-select">
                                    <option value="">اختر الدولة</option>
                                    @foreach (var c in Model.Countries)
                                    {
                                        <option value="@c">@c</option>
                                    }
                                </select>
                            </div>
                            <div class="col">
                                <label asp-for="Nationality"></label>
                                <select asp-for="Nationality" class="form-select">
                                    <option value="">اختر الجنسية</option>
                                    @foreach (var n in Model.Nationalities)
                                    {
                                        <option value="@n">@n</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label>الاهتمامات</label>
                            <div class="d-flex flex-wrap gap-3">
                                @foreach (var interest in Model.AvailableInterests)
                                {
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               name="Interests"
                                               value="@interest"
                                               @(Model.Interests.Contains(interest) ? "checked" : "") />
                                        <label class="form-check-label">@interest</label>
                                    </div>
                                }
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success">حفظ التعديلات</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
