@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "نسيت كلمة السر";
}

<div class="auth-page" dir="rtl">
    <div class="auth-bg-circle"></div>

    <div class="auth-card">

        <!-- Header (Image + Line) -->
        <div class="auth-head">
            <div class="auth-illu">
                <img src="~/images/forgot-password.svg" alt="نسيت كلمة السر" />
            </div>
            <div class="auth-line"></div>
        </div>

        <h1 class="auth-title auth-title-sm">نسيت كلمة السر ؟</h1>
        <p class="auth-subtitle auth-subtitle-sm">
            أدخل ايميلك لنقوم بإرسال رابط استعادة كلمة السر
        </p>

        <form asp-action="ForgotPassword" method="post" class="mt-4">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label auth-label">البريد الإلكتروني</label>
                <div class="auth-input">
                    <input asp-for="Email"
                           class="form-control auth-control"
                           placeholder="اكتب البريد الإلكتروني الخاص بك" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn auth-btn w-100">
                إرسال إلى البريد الإلكتروني
            </button>

            <div class="auth-back mt-3">
                <a asp-action="Login" asp-controller="Account" class="auth-link">
                    الرجوع إلى صفحة تسجيل الدخول
                </a>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
/* ================= PAGE ================= */
.auth-page{
    min-height: calc(100vh - 120px);
    display:flex;
    align-items:center;
    justify-content:center;
    position:relative;
    padding:40px 16px;
    background:#f4fbf5;
    overflow:hidden;
    font-family: "Tajawal","Cairo",system-ui,-apple-system,"Segoe UI",Arial,sans-serif;
}

/* Background circle */
.auth-bg-circle{
    position:absolute;
    width:655px;
    height:647px;
    border-radius:50%;
    background:#dff2e2;
    top:50%;
    left:50%;
    transform:translate(-50%, -50%);
    z-index:0;
}

/* ================= CARD ================= */
.auth-card{
    width:100%;
    max-width:523px;
    height: 652px;
    background:#fff;
    border-radius:18px;
    padding:28px 26px 24px;
    box-shadow: 0 12px 30px rgba(0,0,0,.08);
    z-index:1;
    text-align:center;
}

/* ================= HEADER ================= */
.auth-head{
    display:flex;
    flex-direction:column;
    align-items:center;
    gap:12px;
    margin-bottom:6px;
}

/* Illustration */
.auth-illu{
    width:100%;
    display:flex;
    justify-content:center;
    top: 25px;
    left: 168px;
}

.auth-illu img{
    width: min(240px, 70vw);   /* أكبر + Responsive */
    height:auto;
    opacity:.95;
    pointer-events:none;
    user-select:none;
}

/* Gray line */
.auth-line{
    width: 88%;
    max-width: 420px;
    height: 0.5px;
    background: #585858;      /* رمادي */
    border-radius:1px;
    margin-bottom: 20px;
}

/* ================= TEXT ================= */
.auth-title{
    margin:0;
    color:#25652C;
    font-weight:600;
    line-height:1.1;
    font-size:48px;
}
.auth-title-sm{ font-size:36px; }

.auth-subtitle{
    margin:12px 0 0;
    color:#25652C;
    font-weight:300;
    font-size:20px;

}
.auth-subtitle-sm{ font-size:14px; }

/* ================= FORM ================= */
.auth-label{
    color:#000;
    font-weight:700;
    font-size:12px;
    margin-bottom:8px;
    display:block;
    text-align:right;
    font-weight: bold;
}

.auth-input{ position:relative; }

.auth-control{
    border-radius:10px;
    padding:12px 14px;
    border:1px solid #dfe7e2;
    background:#fff;
    box-shadow:none !important;
    text-align:right;
}

.auth-control:focus{
    border-color:#9ad0a7;
    box-shadow: 0 0 0 .2rem rgba(43,160,82,.15) !important;
}

/* ================= BUTTON ================= */
.auth-btn{
    background:#F99D27;
    border:none;
    border-radius:10px;
    padding:13px 14px;
    font-weight:800;
    color:#fff;
    margin-top:6px;
}
.auth-btn:hover{
    background:#ee9414;
    color:#fff;
}

/* ================= FOOTER ================= */
.auth-back{
    text-align:center;
    font-size:16px;
    font-weight:700;
    font-weight: bolder;
    text-decoration: underline;
    padding-top: 40px;
}
.auth-back :hover {
    cursor: pointer;
    color: #25652C;}

.auth-link{
    color:#2f3a33;
    text-decoration:none;
}
.auth-link:hover{
    text-decoration:underline;
}

/* ================= MOBILE ================= */
@@media (max-width: 480px){
    .auth-card{
        padding:22px 18px;
    }
    .auth-title-sm{
        font-size:30px;
    }
}

</style>
