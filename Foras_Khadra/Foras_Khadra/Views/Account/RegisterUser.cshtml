    margin:-6px 0 14px;
    color:#93a49a;
    font-size:12px;
    text-align:right;
}
.reg-checks{
    display:flex;
    flex-wrap:wrap;
    gap:18px 26px;
    justify-content:flex-start;
}
.reg-check{
    display:flex;
    align-items:center;
    gap:10px;
    cursor:pointer;
    user-select:none;
}
.reg-check input{ position:absolute; opacity:0; }
.reg-check-box{
    width:16px;
    height:16px;
    border-radius:4px;
    border:2px solid #d1ddd5;
    background:#fff;
    position:relative;
}
.reg-check input:checked + .reg-check-box{
    border-color:#F99D27;
    background:#F99D27;
}
