@model Foras_Khadra.ViewModels.RegisterViewModel
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
    var culture = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
    var dir = culture == "ar" ? "rtl" : "ltr";
}

<div class="reg-page" dir="@dir">
    <div class="reg-bg-circle"></div>

    <div class="reg-wrap">

        <!-- Header -->
        <div class="reg-header">
            <h1 class="reg-title">@Localizer["RegHeaderTitle"]</h1>
            <p class="reg-subtitle">@Localizer["RegHeaderSubtitle"]</p>
        </div>

        <div class="reg-card">
            <!-- Left: Main form -->
            <div class="reg-main">

                <form asp-action="RegisterUser" method="post" id="registerWizard">
                    @Html.AntiForgeryToken()

                    <!-- STEP 1: Account type -->
                    <section class="reg-step active" data-step="1">
                        <h2 class="reg-step-title">@Localizer["Stepper1"]</h2>

                        <div class="reg-type-grid">
                            <!-- Org -->
                            <label class="reg-type-card">
                                <input type="radio" name="AccountType" value="organization" disabled />
                                <span class="reg-type-radio"></span>
                                <div class="reg-type-icon">
                                    <svg width="56" height="56" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                                        <path d="M16 11c1.657 0 3-1.567 3-3.5S17.657 4 16 4s-3 1.567-3 3.5S14.343 11 16 11Z" stroke="currentColor" stroke-width="1.8" />
                                        <path d="M8 11c1.657 0 3-1.567 3-3.5S9.657 4 8 4 5 5.567 5 7.5 6.343 11 8 11Z" stroke="currentColor" stroke-width="1.8" />
                                        <path d="M2.5 20c.5-3.5 3.5-6 7-6" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" />
                                        <path d="M21.5 20c-.5-3.5-3.5-6-7-6" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" />
                                        <path d="M9 20c.4-3 2.3-5 3-5s2.6 2 3 5" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" />
                                    </svg>
                                </div>
                                <div class="reg-type-text">
                                    <div class="reg-type-name">@Localizer["OrgAccount"]</div>
                                </div>
                            </label>

                            <!-- Individual -->
                            <label class="reg-type-card">
                                <input type="radio" name="AccountType" value="individual" checked />
                                <span class="reg-type-radio"></span>
                                <div class="reg-type-icon">
                                    <svg width="56" height="56" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                                        <path d="M12 12c2.21 0 4-1.99 4-4.444C16 5.1 14.21 3 12 3S8 5.1 8 7.556C8 10.01 9.79 12 12 12Z" stroke="currentColor" stroke-width="1.8" />
                                        <path d="M4 21c.8-4 4-6 8-6s7.2 2 8 6" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" />
                                    </svg>
                                </div>
                                <div class="reg-type-text">
                                    <div class="reg-type-name">@Localizer["IndividualAccount"]</div>
                                </div>
                            </label>
                        </div>

                        <button type="button" class="btn reg-btn w-100" onclick="nextStep()">
                            @Localizer["Next"]
                        </button>
                    </section>

                    <!-- STEP 2: Personal info -->
                    <section class="reg-step" data-step="2">
                        <h2 class="reg-step-title">@Localizer["Step2Title"]</h2>
                        <div class="reg-grid-2">
                            <div class="reg-field">
                                <label asp-for="FirstName" class="reg-label">@Localizer["FirstNameLabel"]</label>
                                <input asp-for="FirstName" id="FirstName" class="reg-input" placeholder="@Localizer["FirstNamePlaceholder"]" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="reg-field">
                                <label asp-for="LastName" class="reg-label">@Localizer["LastNameLabel"]</label>
                                <input asp-for="LastName" id="LastName" class="reg-input" placeholder="@Localizer["LastNamePlaceholder"]" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="reg-field">
                            <label asp-for="Email" class="reg-label">@Localizer["EmailLabel"]</label>
                            <input asp-for="Email" id="Email" class="reg-input" type="email" placeholder="@Localizer["EmailPlaceholder"]" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="reg-grid-2">
                            <div class="reg-field has-eye">
                                <label asp-for="Password" class="reg-label">@Localizer["PasswordLabel"]</label>
                                <input asp-for="Password" id="Password" class="reg-input" type="password" placeholder="@Localizer["PasswordPlaceholder"]" />
                                <button type="button" class="reg-eye" onclick="togglePassword('Password')" aria-label="@Localizer["ShowHidePasswordLabel"]">
                                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none">
                                        <path d="M2 12s3.5-7 10-7 10 7 10 7-3.5 7-10 7S2 12 2 12Z" stroke="currentColor" stroke-width="2" />
                                        <path d="M12 15a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" stroke="currentColor" stroke-width="2" />
                                    </svg>
                                </button>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="reg-field has-eye">
                                <label asp-for="ConfirmPassword" class="reg-label">@Localizer["ConfirmPasswordLabel"]</label>
                                <input asp-for="ConfirmPassword" id="ConfirmPassword" class="reg-input" type="password" placeholder="@Localizer["ConfirmPasswordPlaceholder"]" />
                                <button type="button" class="reg-eye" onclick="togglePassword('ConfirmPassword')" aria-label="@Localizer["ShowHidePasswordLabel"]">
                                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none">
                                        <path d="M2 12s3.5-7 10-7 10 7 10 7-3.5 7-10 7S2 12 2 12Z" stroke="currentColor" stroke-width="2" />
                                        <path d="M12 15a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" stroke="currentColor" stroke-width="2" />
                                    </svg>
                                </button>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="reg-actions">
                            <button type="button" class="btn reg-btn-outline" onclick="prevStep()">@Localizer["Back"]</button>
                            <button type="button" class="btn reg-btn" onclick="nextStep()">@Localizer["Next"]</button>
                        </div>
                    </section>

                    <!-- STEP 3: Country -->
                    <section class="reg-step" data-step="3">
                        <h2 class="reg-step-title">@Localizer["Step3Title"]</h2>
                        <div class="reg-grid-1">
                            <div class="reg-field">
                                <label asp-for="Country" class="reg-label">@Localizer["CountryLabel"]</label>
                                <select asp-for="Country" id="Country" class="reg-input">
                                    <option value="">@Localizer["CountryPlaceholder"]</option>
                                    @foreach (var c in Model.Countries)
                                    {
                                        <option value="@c">@c</option>
                                    }
                                </select>
                                <span asp-validation-for="Country" class="text-danger"></span>
                            </div>
                            <div class="reg-field">
                                <label asp-for="Nationality" class="reg-label">@Localizer["NationalityLabel"]</label>
                                <select asp-for="Nationality" id="Nationality" class="reg-input">
                                    <option value="">@Localizer["NationalityPlaceholder"]</option>
                                    @foreach (var n in Model.Nationalities)
                                    {
                                        <option value="@n">@n</option>
                                    }
                                </select>
                                <span asp-validation-for="Nationality" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="reg-actions">
                            <button type="button" class="btn reg-btn-outline" onclick="prevStep()">@Localizer["Back"]</button>
                            <button type="button" class="btn reg-btn" onclick="nextStep()">@Localizer["Next"]</button>
                        </div>
                    </section>

                    <!-- STEP 4: Interests -->
                    <section class="reg-step" data-step="4">
                        <h2 class="reg-step-title">@Localizer["Step4Title"]</h2>
                        <p class="reg-hint">@Localizer["Step4Hint"]</p>

                        <div class="reg-checks">
                            @foreach (var interest in Model.AvailableInterests)
                            {
                                <label class="reg-check">
                                    <input type="checkbox" name="Interests" value="@interest.Key" @(Model.Interests != null && Model.Interests.Contains(interest.Key) ? "checked" : "") />
                                    <span class="reg-check-box"></span>
                                    <span class="reg-check-text">@Localizer[interest.Key]</span>
                                </label>
                            }
                        </div>

                        <div class="reg-actions">
                            <button type="button" class="btn reg-btn-outline" onclick="prevStep()">@Localizer["Back"]</button>
                            <button type="button" class="btn reg-btn" onclick="submitForm()">@Localizer["SubmitButton"]</button>
                        </div>
                    </section>

                    <!-- Progress -->
                    <div class="reg-progress">
                        <div class="reg-progress-bar">
                            <div id="progressFill" class="reg-progress-fill" style="width:25%"></div>
                        </div>
                        <div id="progressText" class="reg-progress-text">@Localizer["Progress25"]</div>
                    </div>
                </form>
            </div>

            <!-- Right: Stepper -->
            <aside class="reg-side">
                <div class="reg-stepper">
                    <div class="reg-stepper-item active" data-s="1"><span class="dot"></span><span class="label">@Localizer["Stepper1"]</span></div>
                    <div class="reg-stepper-item" data-s="2"><span class="dot"></span><span class="label">@Localizer["Stepper2"]</span></div>
                    <div class="reg-stepper-item" data-s="3"><span class="dot"></span><span class="label">@Localizer["Stepper3"]</span></div>
                    <div class="reg-stepper-item" data-s="4"><span class="dot"></span><span class="label">@Localizer["Stepper4"]</span></div>
                </div>
            </aside>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const i18n = {
            fillAll: @Html.Raw(Json.Serialize(Localizer["FillAllFieldsAlert"].Value)),
            passwordMismatch: @Html.Raw(Json.Serialize(Localizer["PasswordMismatchAlert"].Value)),
            selectCountry: @Html.Raw(Json.Serialize(Localizer["SelectCountryNationalityAlert"].Value)),
            selectInterest: @Html.Raw(Json.Serialize(Localizer["SelectInterestAlert"].Value)),
            progress: @Html.Raw(Json.Serialize(Localizer["Progress"].Value))
        };
    </script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
 function showSwal(message) {
    Swal.fire({
        icon: "warning",
        iconColor: "#fff",
        allowOutsideClick: false,
        confirmButtonText: "OK",
        confirmButtonColor: "#F99D27",
        html: `<div class="foras-swal-msg">${message}</div>`,
        customClass: {
            popup: "foras-swal",
            confirmButton: "foras-swal-btn",
            icon: "foras-swal-icon"
        }
    });
}



    function showStep(step){
        document.querySelectorAll('.reg-step').forEach(s => s.classList.remove('active'));
        document.querySelector(`.reg-step[data-step="${step}"]`).classList.add('active');

        document.querySelectorAll('.reg-stepper-item').forEach(i => i.classList.remove('active'));
        document.querySelector(`.reg-stepper-item[data-s="${step}"]`).classList.add('active');

        const percentMap = {1:25, 2:50, 3:75, 4:100};
        const p = percentMap[step] || 25;
        document.getElementById('progressFill').style.width = p + '%';
        document.getElementById('progressText').innerText = `${i18n.progress} ${p}%`;
        currentStep = step;
    }

    function nextStep(){
        if(currentStep === 1){
            const type = document.querySelector('input[name="AccountType"]:checked')?.value;
            if(type === 'organization'){
                window.location.href = '@Url.Action("Register", "Organization")';
                return;
            }
        }
        if(!validateStep(currentStep)) return;
        showStep(Math.min(currentStep + 1, 4));
    }

    function prevStep(){ showStep(Math.max(currentStep - 1, 1)); }

    function togglePassword(id){
        const el = document.getElementById(id);
        el.type = el.type === 'password' ? 'text' : 'password';
    }

    function validateStep(step){
        if(step === 2){
            const fn = document.getElementById('FirstName')?.value?.trim();
            const ln = document.getElementById('LastName')?.value?.trim();
            const em = document.getElementById('Email')?.value?.trim();
            const pw = document.getElementById('Password')?.value;
            const cpw = document.getElementById('ConfirmPassword')?.value;

            if(!fn || !ln || !em || !pw || !cpw){
                showSwal(i18n.fillAll);
                return false;
            }
            if(pw !== cpw){
                showSwal(i18n.passwordMismatch);
                return false;
            }
        }

        if(step === 3){
            const c = document.getElementById('Country')?.value;
            const n = document.getElementById('Nationality')?.value;
            if(!c || !n){
                showSwal(i18n.selectCountry);
                return false;
            }
        }

        if(step === 4){
            const checked = document.querySelectorAll('input[name="Interests"]:checked');
            if(checked.length === 0){
                showSwal(i18n.selectInterest);
                return false;
            }
        }

        return true;
    }

    function submitForm() {
        const checked = document.querySelectorAll('input[name="Interests"]:checked');
        if(checked.length === 0){
            showSwal(i18n.selectInterest);
            return;
        }
        document.getElementById('registerWizard').submit();
    }

    showStep(1);
</script>

    




    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // تحقق إذا كان هناك ModelState Error
            var emailError = document.querySelector('span[data-valmsg-for="Email"]');
            var firstNameError = document.querySelector('span[data-valmsg-for="FirstName"]');
            var lastNameError = document.querySelector('span[data-valmsg-for="LastName"]');

            if ((emailError && emailError.innerText.trim() !== '') ||
                (firstNameError && firstNameError.innerText.trim() !== '') ||
                (lastNameError && lastNameError.innerText.trim() !== '')) {
                // افتح الخطوة 2 تلقائياً لأنها تحتوي على حقول الاسم والبريد وكلمة المرور
                showStep(2);
            }

            // إذا كانت هناك أخطاء في STEP 3 (Country/Nationality)
            var countryError = document.querySelector('span[data-valmsg-for="Country"]');
            var nationalityError = document.querySelector('span[data-valmsg-for="Nationality"]');
            if ((countryError && countryError.innerText.trim() !== '') ||
                (nationalityError && nationalityError.innerText.trim() !== '')) {
                showStep(3);
            }

            // إذا كانت هناك أخطاء في STEP 4 (Interests)
            var interestsError = document.querySelector('span[data-valmsg-for="Interests"]');
            if (interestsError && interestsError.innerText.trim() !== '') {
                showStep(4);
            }
        });
    </script>

}

<style>
