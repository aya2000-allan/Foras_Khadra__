@model Foras_Khadra.ViewModels.RegisterViewModel
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
    var culture = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
    var dir = culture == "ar" ? "rtl" : "ltr";
}

<div class="reg-page" dir="@dir">
    <div class="reg-bg-circle"></div>

    <div class="reg-wrap">

        <!-- Header -->
        <div class="reg-header">
            <h1 class="reg-title">إنشاء حساب</h1>
            <p class="reg-subtitle">
                أهلاً وسهلاً، قم باتباع الخطوات التالية لتتمكن من الوصول إلى كافة الفرص والحصول على العديد من الميزات
            </p>
        </div>

        <div class="reg-card">
            <!-- Left: Main form -->
            <div class="reg-main">

                <form asp-action="RegisterUser" method="post" id="registerWizard">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <!-- STEP 1: Account type -->
                    <section class="reg-step active" data-step="1">
                        <h2 class="reg-step-title">حدد نوع الحساب الخاص بك</h2>

                        <div class="reg-type-grid">
                            <!-- Org -->
                            <label class="reg-type-card">
                                <input type="radio" name="AccountType" value="organization" disabled />
                                <span class="reg-type-radio"></span>

                                <div class="reg-type-icon">
                                    <!-- group icon -->
                                    <svg width="56" height="56" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                                        <path d="M16 11c1.657 0 3-1.567 3-3.5S17.657 4 16 4s-3 1.567-3 3.5S14.343 11 16 11Z" stroke="currentColor" stroke-width="1.8"/>
                                        <path d="M8 11c1.657 0 3-1.567 3-3.5S9.657 4 8 4 5 5.567 5 7.5 6.343 11 8 11Z" stroke="currentColor" stroke-width="1.8"/>
                                        <path d="M2.5 20c.5-3.5 3.5-6 7-6" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
                                        <path d="M21.5 20c-.5-3.5-3.5-6-7-6" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
                                        <path d="M9 20c.4-3 2.3-5 3-5s2.6 2 3 5" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
                                    </svg>
                                </div>

                                <div class="reg-type-text">
                                    <div class="reg-type-name">حساب منظمة</div>
                                </div>
                            </label>

                            <!-- Individual (default checked) -->
                            <label class="reg-type-card">
                                <input type="radio" name="AccountType" value="individual" checked />
                                <span class="reg-type-radio"></span>

                                <div class="reg-type-icon">
                                    <!-- user icon -->
                                    <svg width="56" height="56" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                                        <path d="M12 12c2.21 0 4-1.99 4-4.444C16 5.1 14.21 3 12 3S8 5.1 8 7.556C8 10.01 9.79 12 12 12Z" stroke="currentColor" stroke-width="1.8"/>
                                        <path d="M4 21c.8-4 4-6 8-6s7.2 2 8 6" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
                                    </svg>
                                </div>

                                <div class="reg-type-text">
                                    <div class="reg-type-name">حساب فردي</div>
                                </div>
                            </label>
                        </div>

                        <button type="button" class="btn reg-btn w-100" onclick="nextStep()">
                            التالي
                        </button>
                    </section>

                    <!-- STEP 2: Personal info -->
                    <section class="reg-step" data-step="2">
                        <h2 class="reg-step-title">المعلومات الشخصية</h2>

                        <div class="reg-grid-2">
                            <div class="reg-field">
                                <label asp-for="FirstName" class="reg-label">الاسم الأول</label>
                                <input asp-for="FirstName" id="FirstName" class="reg-input" placeholder="الاسم الأول" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="reg-field">
                                <label asp-for="LastName" class="reg-label">الاسم الأخير</label>
                                <input asp-for="LastName" id="LastName" class="reg-input" placeholder="الاسم الأخير" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="reg-field">
                            <label asp-for="Email" class="reg-label">البريد الإلكتروني</label>
                            <input asp-for="Email" id="Email" class="reg-input" type="email" placeholder="أدخل بريدك الإلكتروني" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="reg-grid-2">
                            <div class="reg-field has-eye">
                                <label asp-for="Password" class="reg-label">ادخل كلمة المرور</label>
                                <input asp-for="Password" id="Password" class="reg-input" type="password" placeholder="ادخل كلمة المرور" />
                                <button type="button" class="reg-eye" onclick="togglePassword('Password')"
                                        aria-label="إظهار/إخفاء كلمة المرور">
                                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none">
                                        <path d="M2 12s3.5-7 10-7 10 7 10 7-3.5 7-10 7S2 12 2 12Z" stroke="currentColor" stroke-width="2"/>
                                        <path d="M12 15a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" stroke="currentColor" stroke-width="2"/>
                                    </svg>
                                </button>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="reg-field has-eye">
                                <label asp-for="ConfirmPassword" class="reg-label">ادخل تأكيد كلمة المرور</label>
                                <input asp-for="ConfirmPassword" id="ConfirmPassword" class="reg-input" type="password" placeholder="ادخل تأكيد كلمة المرور" />
                                <button type="button" class="reg-eye" onclick="togglePassword('ConfirmPassword')"
                                        aria-label="إظهار/إخفاء كلمة المرور">
                                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none">
                                        <path d="M2 12s3.5-7 10-7 10 7 10 7-3.5 7-10 7S2 12 2 12Z" stroke="currentColor" stroke-width="2"/>
                                        <path d="M12 15a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" stroke="currentColor" stroke-width="2"/>
                                    </svg>
                                </button>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="reg-actions">
                            <button type="button" class="btn reg-btn-outline" onclick="prevStep()">رجوع</button>
                            <button type="button" class="btn reg-btn" onclick="nextStep()">التالي</button>
                        </div>
                    </section>

                    <!-- STEP 3: Country -->
                    <section class="reg-step" data-step="3">
                        <h2 class="reg-step-title">الدولة والموقع</h2>

                        <div class="reg-grid-1">
                            <div class="reg-field">
                                <label asp-for="Country" class="reg-label">اختر دولتك</label>
                                <select asp-for="Country" id="Country" class="reg-input">
                                    <option value="">اختر دولتك</option>
                                    @foreach (var c in Model.Countries)
                                    {
                                        <option value="@c">@c</option>
                                    }
                                </select>
                                <span asp-validation-for="Country" class="text-danger"></span>
                            </div>

                            <div class="reg-field">
                                <label asp-for="Nationality" class="reg-label">اختر الدولة التي تسكن بها</label>
                                <select asp-for="Nationality" id="Nationality" class="reg-input">
                                    <option value="">اختر الجنسية</option>
                                    @foreach (var n in Model.Nationalities)
                                    {
                                        <option value="@n">@n</option>
                                    }
                                </select>
                                <span asp-validation-for="Nationality" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="reg-actions">
                            <button type="button" class="btn reg-btn-outline" onclick="prevStep()">رجوع</button>
                            <button type="button" class="btn reg-btn" onclick="nextStep()">التالي</button>
                        </div>
                    </section>

                    <!-- STEP 4: Interests -->
                    <section class="reg-step" data-step="4">
                        <h2 class="reg-step-title">الاهتمامات</h2>
                        <p class="reg-hint">يمكنك تحديد أكثر من خيار</p>

                        <div class="reg-checks">
                            @foreach (var interest in Model.AvailableInterests)
                            {
                                <label class="reg-check">
                                    <input type="checkbox"
                                           name="Interests"
                                           value="@interest.Key"
                                           @(Model.Interests != null && Model.Interests.Contains(interest.Key) ? "checked" : "") />

                                    <span class="reg-check-box"></span>
                                    <span class="reg-check-text">@Localizer[interest.Key]</span>
                                </label>
                            }
                        </div>

                        <div class="reg-actions">
                            <button type="button" class="btn reg-btn-outline" onclick="prevStep()">رجوع</button>
                            <button type="submit" class="btn reg-btn">أنشئ حسابي</button>
                        </div>
                    </section>

                    <!-- Progress -->
                    <div class="reg-progress">
                        <div class="reg-progress-bar">
                            <div id="progressFill" class="reg-progress-fill" style="width:25%"></div>
                        </div>
                        <div id="progressText" class="reg-progress-text">تم إنجاز %25</div>
                    </div>
                </form>
            </div>

            <!-- Right: Stepper -->
            <aside class="reg-side">
                <div class="reg-stepper">
                    <div class="reg-stepper-item active" data-s="1">
                        <span class="dot"></span>
                        <span class="label">تحديد الفئة</span>
                    </div>
                    <div class="reg-stepper-item" data-s="2">
                        <span class="dot"></span>
                        <span class="label">المعلومات الشخصية</span>
                    </div>
                    <div class="reg-stepper-item" data-s="3">
                        <span class="dot"></span>
                        <span class="label">الدولة والموقع</span>
                    </div>
                    <div class="reg-stepper-item" data-s="4">
                        <span class="dot"></span>
                        <span class="label">الاهتمامات</span>
                    </div>
                </div>
            </aside>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

    <script>
        let currentStep = 1;

        function showStep(step){
            document.querySelectorAll('.reg-step').forEach(s => s.classList.remove('active'));
            document.querySelector(`.reg-step[data-step="${step}"]`).classList.add('active');

            // stepper
            document.querySelectorAll('.reg-stepper-item').forEach(i => i.classList.remove('active'));
            document.querySelector(`.reg-stepper-item[data-s="${step}"]`).classList.add('active');

            // progress
            const percentMap = {1:25, 2:50, 3:75, 4:100};
            const p = percentMap[step] || 25;
            document.getElementById('progressFill').style.width = p + '%';
            document.getElementById('progressText').innerText = `تم إنجاز %${p}`;
            currentStep = step;
        }

        function nextStep(){
            // إذا اختارت منظمة بالخطوة 1 نوديه على صفحة تسجيل المنظمة
            if(currentStep === 1){
                const type = document.querySelector('input[name="AccountType"]:checked')?.value;
                if(type === 'organization'){
                    // غيّري هذا المسار إذا عندك Action مختلف
                    window.location.href = '@Url.Action("Register", "Organization")';
                    return;
                }
            }

            if(!validateStep(currentStep)) return;
            showStep(Math.min(currentStep + 1, 4));
        }

        function prevStep(){
            showStep(Math.max(currentStep - 1, 1));
        }

        function togglePassword(id){
            const el = document.getElementById(id);
            el.type = el.type === 'password' ? 'text' : 'password';
        }

        function validateStep(step){
            if(step === 2){
                const fn = document.getElementById('FirstName')?.value?.trim();
                const ln = document.getElementById('LastName')?.value?.trim();
                const em = document.getElementById('Email')?.value?.trim();
                const pw = document.getElementById('Password')?.value;
                const cpw = document.getElementById('ConfirmPassword')?.value;
                if(!fn || !ln || !em || !pw || !cpw){
                    alert('يرجى ملء جميع الحقول قبل الانتقال.');
                    return false;
                }
                if(pw !== cpw){
                    alert('كلمة المرور وتأكيدها غير متطابقين.');
                    return false;
                }
            }

            if(step === 3){
                const c = document.getElementById('Country')?.value;
                const n = document.getElementById('Nationality')?.value;
                if(!c || !n){
                    alert('يرجى اختيار الدولة والجنسية قبل الانتقال.');
                    return false;
                }
            }

            if(step === 4){
                const checked = document.querySelectorAll('input[name="Interests"]:checked');
                if(checked.length === 0){
                    alert('يرجى اختيار اهتمام واحد على الأقل.');
                    return false;
                }
            }

            return true;
        }

        // init
        showStep(1);
    </script>
}

<style>
/* Page */
.reg-page{
    min-height: calc(100vh - 120px);
    background:#F2FBF3;
    position:relative;
    overflow:hidden;
    font-family:"Tajawal","Cairo",system-ui,-apple-system,"Segoe UI",Arial,sans-serif;
    padding:40px 16px 60px;
}
@* .reg-bg-circle{
    position:absolute;
    width:820px;
    height:820px;
    border-radius:50%;
    background:#E2F6E4;
    top:50%;
    left:50%;
    transform:translate(-50%, -52%);
    z-index:0;
} *@
.reg-wrap{
    position:relative;
    z-index:1;
    max-width:1050px;
    margin:0 auto;
}
.reg-header{
    text-align:center;
    margin-bottom:22px;
}
.reg-title{
    margin:0;
    color:#25652C;
    font-weight:700;
    font-size:44px;
}
.reg-subtitle{
    margin:10px 0 0;
    color:#25652C;
    font-weight:300;
    font-size:14px;
}

/* Card layout */
.reg-card{
    background:#fff;
    border-radius:18px;
    box-shadow:0 12px 30px rgba(0,0,0,.08);
    padding:26px;
    display:grid;
    grid-template-columns: 1fr 260px;
    gap:18px;
        direction: ltr;
    gap: 28px;     
     
   

}
.reg-main,
.reg-side{
    direction: rtl;   
}

/* Right stepper */
.reg-side{
    background:#f7fbf8;
    border:1px solid #e8efe9;
    border-radius:16px;
    padding:18px;
}
.reg-stepper{
    display:flex;
    flex-direction:column;
    gap:18px;
    position:relative;
}
.reg-stepper-item{
    display:flex;
    align-items:center;
    gap:10px;
    color:#93a49a;
    font-weight:700;
    font-size:13px;
}
.reg-stepper-item .dot{
    width:34px;
    height:34px;
    border-radius:50%;
    background:#eaf2ec;
    border:2px solid #cfe0d3;
    display:inline-block;
    position:relative;
}
.reg-stepper-item.active{
    color:#25652C;
}
.reg-stepper-item.active .dot{
    background:#2f7d35;
    border-color:#2f7d35;
}
.reg-stepper-item.active .dot::after{
    content:"";
    position:absolute;
    inset:9px;
    border-radius:50%;
    background:#fff;
}

/* Main */
.reg-main{ padding:6px 4px; }

.reg-step{ display:none; }
.reg-step.active{ display:block; }

.reg-step-title{
    margin:0 0 14px;
    color:#25652C;
    font-weight:700;
    font-size:18px;
    text-align:right;
}

/* Step 1 cards */
.reg-type-grid{
    display:grid;
    grid-template-columns: 1fr 1fr;
    gap:16px;
    margin: 8px 0 18px;
}
.reg-type-card{
    border:1px solid #dfe7e2;
    border-radius:14px;
    padding:18px 16px;
    display:flex;
    flex-direction:column;
    align-items:center;
    justify-content:center;
    gap:10px;
    cursor:pointer;
    position:relative;
    min-height:140px;
    color:#6f7f76;
}
.reg-type-card input{
    position:absolute;
    opacity:0;
    pointer-events:none;
}
.reg-type-radio{
    position:absolute;
    top:12px;
    right:12px;
    width:16px;
    height:16px;
    border-radius:50%;
    border:2px solid #c9d6ce;
    background:#fff;
}
.reg-type-card input:checked + .reg-type-radio{
    border-color:#F99D27;
}
.reg-type-card input:checked + .reg-type-radio::after{
    content:"";
    position:absolute;
    inset:3px;
    border-radius:50%;
    background:#F99D27;
}
.reg-type-icon{ color:#8a9b92; }
.reg-type-name{ font-weight:700; color:#2f3a33; }

/* Fields */
.reg-grid-2{
    display:grid;
    grid-template-columns: 1fr 1fr;
    gap:14px;
}
.reg-grid-1{ display:grid; gap:14px; }

.reg-field{ text-align:right;
}
.reg-label{
    display:block;
    margin-bottom:8px;
    font-size:12px;
    font-weight:800;
    color:#000;
    margin-top: 12px;
    
}
.reg-input{
    width:100%;
    border:1px solid #dfe7e2;
    border-radius:10px;
    padding:12px 14px;
    outline:none;
    background:#fff;
    padding-left: 10px;
}
.reg-input:focus{
    border-color:#9ad0a7;
    box-shadow:0 0 0 .2rem rgba(43,160,82,.15);
}
.has-eye{ position:relative; }
.reg-eye{
    position:absolute;
    left:10px;
    bottom:5px;
    border:0;
    background:transparent;
    color:#9aa7a0;
    padding:7px;
    cursor:pointer;
}

/* Interests */
.reg-hint{
    margin:-6px 0 14px;
    color:#93a49a;
    font-size:12px;
    text-align:right;
}
.reg-checks{
    display:flex;
    flex-wrap:wrap;
    gap:18px 26px;
    justify-content:flex-start;
}
.reg-check{
    display:flex;
    align-items:center;
    gap:10px;
    cursor:pointer;
    user-select:none;
}
.reg-check input{ position:absolute; opacity:0; }
.reg-check-box{
    width:16px;
    height:16px;
    border-radius:4px;
    border:2px solid #d1ddd5;
    background:#fff;
    position:relative;
}
.reg-check input:checked + .reg-check-box{
    border-color:#F99D27;
    background:#F99D27;
}
.reg-check input:checked + .reg-check-box::after{
    content:"";
    position:absolute;
    left:4px; top:1px;
    width:5px; height:9px;
    border:2px solid #fff;
    border-top:0; border-left:0;
    transform:rotate(45deg);
}
.reg-check-text{ color:#2f3a33; font-weight:700; font-size:12px; }

/* Buttons */
.reg-actions{
    display:flex;
    gap:18px;
    margin-top:18px;
}
.reg-btn{
    background:#F99D27;
    border:0;
    border-radius:10px;
    padding:12px 14px;
    font-weight:800;
    color:#fff;
    flex:1;
}
.reg-btn:hover{ background:#ef981d; color:#fff; }

.reg-btn-outline{
    background:#fff;
    border:1px solid #F99D27;
    color:#F99D27;
    border-radius:10px;
    padding:12px 14px;
    font-weight:800;
    flex:1;
}
.reg-btn-outline:hover{
    background:#fff7ee;
    color:#F99D27;
}

/* Progress bottom */
.reg-progress{
    margin-top:22px;
}
.reg-progress-bar{
    height:10px;
    border-radius:999px;
    background:#e8efe9;
    overflow:hidden;
}
.reg-progress-fill{
    height:100%;
    background:#2f7d35;
    border-radius:999px;
    width:25%;
    transition: width .25s ease;
}
.reg-progress-text{
    margin-top:10px;
    text-align:center;
    color:#2f7d35;
    font-weight:700;
    font-size:14px;
}

/* Responsive */
@@media (max-width: 900px){
    .reg-card{ grid-template-columns: 1fr; }
    .reg-side{ order:-1; }
}
@@media (max-width: 520px){
    .reg-title{ font-size:34px; }
    .reg-type-grid{ grid-template-columns: 1fr; }
    .reg-grid-2{ grid-template-columns: 1fr; }
    .reg-eye{ top:40px; }
}
</style>
