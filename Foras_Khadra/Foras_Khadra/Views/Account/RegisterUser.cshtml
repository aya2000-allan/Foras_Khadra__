    width:820px;
    height:820px;
    border-radius:50%;
    background:#E2F6E4;
    top:50%;
    left:50%;
    transform:translate(-50%, -52%);
    z-index:0;
} *@
.reg-wrap{
    position:relative;
    z-index:1;
    max-width:1050px;
    margin:0 auto;
}
.reg-header{
    text-align:center;
    margin-bottom:22px;
}
.reg-title{
    margin:0;
    color:#25652C;
    font-weight:700;
    font-size:44px;
}
.reg-subtitle{
    margin:10px 0 0;
    color:#25652C;
    font-weight:300;
    font-size:14px;
}

/* Card layout */
.reg-card{
    background:#fff;
    border-radius:18px;
    box-shadow:0 12px 30px rgba(0,0,0,.08);
    padding:26px;
    display:grid;
    grid-template-columns: 1fr 260px;
    gap:18px;
        direction: ltr;
    gap: 28px;     
     
   

}
.reg-main,
.reg-side{
    direction: rtl;   
}

/* Right stepper */
.reg-side{
    background:#f7fbf8;
    border:1px solid #e8efe9;
    border-radius:16px;
    padding:18px;
}
.reg-stepper{
    display:flex;
    flex-direction:column;
    gap:18px;
    position:relative;
}
.reg-stepper-item{
    display:flex;
    align-items:center;
    gap:10px;
    color:#93a49a;
    font-weight:700;
    font-size:13px;
}
.reg-stepper-item .dot{
    width:34px;
    height:34px;
    border-radius:50%;
    background:#eaf2ec;
    border:2px solid #cfe0d3;
    display:inline-block;
    position:relative;
}
.reg-stepper-item.active{
    color:#25652C;
}
.reg-stepper-item.active .dot{
    background:#2f7d35;
    border-color:#2f7d35;
}
.reg-stepper-item.active .dot::after{
    content:"";
    position:absolute;
    inset:9px;
    border-radius:50%;
    background:#fff;
}

/* Main */
.reg-main{ padding:6px 4px; }

.reg-step{ display:none; }
.reg-step.active{ display:block; }

.reg-step-title{
    margin:0 0 14px;
    color:#25652C;
    font-weight:700;
    font-size:18px;
    text-align:right;
}

/* Step 1 cards */
.reg-type-grid{
    display:grid;
    grid-template-columns: 1fr 1fr;
    gap:16px;
    margin: 8px 0 18px;
}
.reg-type-card{
    border:1px solid #dfe7e2;
    border-radius:14px;
    padding:18px 16px;
    display:flex;
    flex-direction:column;
    align-items:center;
    justify-content:center;
    gap:10px;
    cursor:pointer;
    position:relative;
    min-height:140px;
    color:#6f7f76;
}
.reg-type-card input{
    position:absolute;
    opacity:0;
    pointer-events:none;
}
.reg-type-radio{
    position:absolute;
    top:12px;
    right:12px;
    width:16px;
    height:16px;
    border-radius:50%;
    border:2px solid #c9d6ce;
    background:#fff;
}
.reg-type-card input:checked + .reg-type-radio{
    border-color:#F99D27;
}
.reg-type-card input:checked + .reg-type-radio::after{
    content:"";
    position:absolute;
    inset:3px;
    border-radius:50%;
    background:#F99D27;
}
.reg-type-icon{ color:#8a9b92; }
.reg-type-name{ font-weight:700; color:#2f3a33; }

/* Fields */
.reg-grid-2{
    display:grid;
    grid-template-columns: 1fr 1fr;
    gap:14px;
}
.reg-grid-1{ display:grid; gap:14px; }

.reg-field{ text-align:right;
}
.reg-label{
    display:block;
    margin-bottom:8px;
    font-size:12px;
    font-weight:800;
    color:#000;
    margin-top: 12px;
    
}
.reg-input{
    width:100%;
    border:1px solid #dfe7e2;
    border-radius:10px;
    padding:12px 14px;
    outline:none;
    background:#fff;
    padding-left: 10px;
}
.reg-input:focus{
