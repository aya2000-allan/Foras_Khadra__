@model Foras_Khadra.ViewModels.ResetPasswordViewModel

<h2>إعادة تعيين كلمة المرور</h2>

<form asp-action="ResetPassword" method="post">
    <input type="hidden" asp-for="Email" />
    <input type="hidden" asp-for="Token" />

    <div>
        <label asp-for="Password">كلمة المرور</label>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="ConfirmPassword">تأكيد كلمة المرور</label>        <input asp-for="ConfirmPassword" type="password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit">إعادة تعيين كلمة المرور</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
