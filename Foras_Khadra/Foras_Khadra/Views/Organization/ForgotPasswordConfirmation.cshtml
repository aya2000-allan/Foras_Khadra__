@{
    ViewData["Title"] = "تم إرسال البريد";
}

<div class="auth-page" dir="rtl">
    <div class="auth-bg-circle"></div>

    <div class="auth-message">
        <div class="auth-message-icon">
            <div class="auth-icon-wrap">
                <svg width="70" height="70" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                    <circle cx="12" cy="12" r="10" stroke="#2E7D32" stroke-width="2"/>
                    <path d="M7 12.5l3 3 7-7"
                          stroke="#2E7D32"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"/>
                </svg>
            </div>
        </div>

        <h2 class="auth-message-title">تم إرسال البريد الإلكتروني</h2>

        <p class="auth-message-text">
            إذا كان البريد الإلكتروني تابعًا لمنظمة مسجلة في النظام،
            فسيتم إرسال رابط لإعادة تعيين كلمة المرور الخاصة بمنظمتكم خلال لحظات.
        </p>

        <a asp-controller="Organization" asp-action="Login" class="auth-message-link">
            الرجوع إلى صفحة تسجيل الدخول
        </a>
    </div>
</div>

<style>
/* خلفية نفس ستايل صفحات auth */
.auth-page{
    min-height: calc(100vh - 120px);
    display:flex;
    align-items:center;
    justify-content:center;
    position:relative;
    padding:40px 16px;
    background:#f4fbf5;
    overflow:hidden;
    font-family:"Tajawal","Cairo",system-ui,-apple-system,"Segoe UI",Arial,sans-serif;
}

@* .auth-bg-circle{
    position:absolute;
    width:720px;
    height:720px;
    border-radius:50%;
    background:#dff2e2;
    top:50%;
    left:50%;
    transform:translate(-50%, -45%);
    z-index:0;
} *@

/* الكرت */
.auth-message{
    width:100%;
    max-width: 460px;
    margin: 0 auto;
    background:#fff;
    border-radius:18px;
    padding: 34px 26px 30px;
    text-align:center;
    box-shadow:0 12px 30px rgba(0,0,0,.08);
    z-index:1;
}

.auth-message-icon{
    display:flex;
    justify-content:center;
    margin-bottom: 14px;
}

/* دائرة خلف الأيقونة */
.auth-icon-wrap{
    width: 98px;
    height: 98px;
    border-radius: 50%;
    background: #dff2e2;
    display:flex;
    align-items:center;
    justify-content:center;
}

.auth-message-title{
    margin: 6px 0 0;
    font-size: 26px;
    font-weight: 800;
    color:#25652C;
}

.auth-message-text{
    margin: 14px 0 18px;
    font-size: 14px;
    line-height: 1.9;
    color:#5f6f66;
}

/* زر رجوع */
.auth-message-link{
    display:inline-block;
    margin-top: 6px;
    font-weight: 800;
    color:#fff;
    text-decoration:none;
    padding: 12px 14px;
    border-radius: 10px;
    background: #F99D27;
    border: 1px solid #F99D27;
}
.auth-message-link:hover{
    background: #ef981d;
    border-color: #ef981d;
    color:#fff;
}

/* موبايل */
@@media (max-width: 480px){
    .auth-message{
        padding: 26px 18px;
    }
    .auth-message-title{
        font-size: 22px;
    }
    .auth-icon-wrap{
        width: 86px;
        height: 86px;
    }
}
</style>
