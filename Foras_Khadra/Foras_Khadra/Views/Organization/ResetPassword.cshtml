@model Foras_Khadra.Models.OrganizationResetPasswordViewModel
@{
    ViewData["Title"] = "تعيين كلمة مرور جديدة";
}

<div class="auth-page" dir="rtl">
    <div class="auth-bg-circle"></div>

    <div class="auth-card">

        <!-- Header (Image + Line) -->
        <div class="auth-head">
            <div class="auth-illu">
                <img src="~/images/forgot-password.svg" alt="تعيين كلمة مرور جديدة" />
            </div>
            <div class="auth-line"></div>
        </div>

        <h1 class="auth-title auth-title-sm">تعيين كلمة مرور جديدة</h1>
        <p class="auth-subtitle auth-subtitle-sm">
            قم بإدخال وتأكيد كلمة المرور الجديدة لحساب منظمتك
        </p>

        <form asp-controller="Organization" asp-action="ResetPassword" method="post" class="mt-4">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="Token" />

            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <!-- Password -->
            <div class="mb-3">
                <label asp-for="Password" class="form-label auth-label">كلمة المرور الجديدة</label>
                <div class="auth-input has-icon">
                    <input asp-for="Password" id="OrgPassword"
                           class="form-control auth-control"
                           type="password"
                           placeholder="ادخل كلمة المرور الجديدة" />
                    <button type="button" class="auth-eye" onclick="togglePassword('OrgPassword','eye1')"
                            aria-label="إظهار/إخفاء كلمة المرور">
                        <svg id="eye1" width="20" height="20" viewBox="0 0 24 24" fill="none">
                            <path d="M2 12s3.5-7 10-7 10 7 10 7-3.5 7-10 7S2 12 2 12Z" stroke="currentColor" stroke-width="2"/>
                            <path d="M12 15a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" stroke="currentColor" stroke-width="2"/>
                        </svg>
                    </button>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password -->
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label auth-label">تأكيد كلمة المرور</label>
                <div class="auth-input has-icon">
                    <input asp-for="ConfirmPassword" id="OrgConfirmPassword"
                           class="form-control auth-control"
                           type="password"
                           placeholder="أعد إدخال كلمة المرور الجديدة" />
                    <button type="button" class="auth-eye" onclick="togglePassword('OrgConfirmPassword','eye2')"
                            aria-label="إظهار/إخفاء كلمة المرور">
                        <svg id="eye2" width="20" height="20" viewBox="0 0 24 24" fill="none">
                            <path d="M2 12s3.5-7 10-7 10 7 10 7-3.5 7-10 7S2 12 2 12Z" stroke="currentColor" stroke-width="2"/>
                            <path d="M12 15a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" stroke="currentColor" stroke-width="2"/>
                        </svg>
                    </button>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn auth-btn w-100">تأكيد كلمة السر</button>

            <div class="auth-back mt-3">
                <a asp-controller="Organization" asp-action="Login" class="auth-link">
                    رجوع إلى صفحة تسجيل الدخول
                </a>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function togglePassword(inputId, iconId) {
            const el = document.getElementById(inputId);
            const icon = document.getElementById(iconId);

            if (el.type === "password") {
                el.type = "text";
                icon.style.opacity = "1";
            } else {
                el.type = "password";
                icon.style.opacity = ".85";
            }
        }
    </script>
}

<style>
/* ================= PAGE ================= */
.auth-page{
    min-height: calc(100vh - 120px);
    display:flex;
    align-items:center;
    justify-content:center;
    position:relative;
    padding:40px 16px;
    background:#F2FBF3;
    overflow:hidden;
    font-family: "Tajawal","Cairo",system-ui,-apple-system,"Segoe UI",Arial,sans-serif;
}

/* Background circle */
.auth-bg-circle{
    position:absolute;
    width:735px;
    height:725px;
    border-radius:50%;
    background:#E2F6E4;
    top:50%;
    left:50%;
    transform:translate(-50%, -50%);
    z-index:0;
}

/* ================= CARD ================= */
.auth-card{
    width:100%;
    max-width:523px;
    background:#fff;
    border-radius:18px;
    padding:28px 26px 24px;
    box-shadow: 0 12px 30px rgba(0,0,0,.08);
    z-index:1;
    text-align:center;
}

/* ================= HEADER ================= */
.auth-head{
    display:flex;
    flex-direction:column;
    align-items:center;
    gap:12px;
    margin-bottom:6px;
}

.auth-illu{
    width:100%;
    display:flex;
    justify-content:center;
}

.auth-illu img{
    width: min(240px, 70vw);
    height:auto;
    opacity:.95;
    pointer-events:none;
    user-select:none;
}

/* Gray line */
.auth-line{
    width: 88%;
    max-width: 420px;
    height: 1px;
    background: #d3d3d3;
    border-radius:2px;
}

/* ================= TEXT ================= */
.auth-title{
    margin:0;
    color:#25652C;
    font-weight:700;
    line-height:1.1;
}
.auth-title-sm{ font-size:36px; }

.auth-subtitle{
    margin:12px 0 0;
    color:#25652C;
    font-weight:300;
    font-size:20px;
}
.auth-subtitle-sm{ font-size:14px; }

/* ================= FORM ================= */
.auth-label{
    color:#000;
    font-weight:800;
    font-size:13px;
    margin-bottom:8px;
    display:block;
    text-align:right;
}

.auth-input{ position:relative; }

.auth-control{
    border-radius:10px;
    padding:12px 14px;
    border:1px solid #dfe7e2;
    background:#fff;
    box-shadow:none !important;
    text-align:right;
}

/* eye icon space (RTL) */
.has-icon .auth-control{
    padding-left:46px;
}

.auth-control:focus{
    border-color:#9ad0a7;
    box-shadow: 0 0 0 .2rem rgba(43,160,82,.15) !important;
}

.auth-eye{
    position:absolute;
    left:10px;
    top:50%;
    transform:translateY(-50%);
    border:0;
    background:transparent;
    color:#9aa7a0;
    padding:6px;
    cursor:pointer;
}

/* ================= BUTTON ================= */
.auth-btn{
    background:#F99D27;
    border:none;
    border-radius:10px;
    padding:13px 14px;
    font-weight:800;
    color:#fff;
    margin-top:10px;
}
.auth-btn:hover{
    background:#ef981d;
    color:#fff;
}

/* ================= FOOTER ================= */
.auth-back{
    text-align:center;
    font-size:16px;
    font-weight:800;
    padding-top: 18px;
    text-decoration: underline;
}

.auth-link{
    color:#2f3a33;
    text-decoration:none;
}
.auth-link:hover{
    text-decoration:underline;
}

/* ================= MOBILE ================= */
@@media (max-width: 480px){
    .auth-card{ padding:22px 18px; }
    .auth-title-sm{ font-size:30px; }
}
</style>
