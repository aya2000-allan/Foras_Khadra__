}
.foras-swal .swal2-confirm.foras-swal-btn{
  border-radius: 12px !important;
  padding: 14px 30px !important;
  font-weight: 800 !important;
  font-size: 16px !important;
  box-shadow: none !important;
  width: min(520px, 90%) !important;
}
.foras-swal .swal2-actions{
  margin: 10px 0 0 !important;
}

/* نفس ستايل Register الفرد */
.reg-page{
    min-height: calc(100vh - 120px);
    background:#F2FBF3;
    position:relative;
    overflow:hidden;
    font-family:"Tajawal","Cairo",system-ui,-apple-system,"Segoe UI",Arial,sans-serif;
    padding:40px 16px 60px;
}

.reg-wrap{
    position:relative;
    z-index:1;
    max-width:1050px;
    margin:0 auto;
}

.reg-header{
    text-align:center;
    margin-bottom:22px;
}
.reg-title{
    margin:0;
    color:#25652C;
    font-weight:700;
    font-size:44px;
}
.reg-subtitle{
    margin:10px 0 0;
    color:#25652C;
    font-weight:300;
    font-size:14px;
}

/* Card layout */
.reg-card{
    background:#fff;
    border-radius:18px;
    box-shadow:0 12px 30px rgba(0,0,0,.08);
    padding:26px;

    display:grid;
    grid-template-columns: minmax(0,1fr) 260px;
    column-gap:56px;             /* الفراغ بين العمودين */
    @* align-items:start; *@
    direction:ltr;
}
.reg-card > *{ min-width:0; }
.reg-main, .reg-side{ direction:rtl; }

/* Right stepper */
.reg-side{
    background:#f7fbf8;
    border:1px solid #e8efe9;
    border-radius:16px;
    padding:18px;
}
.reg-stepper{
    display:flex;
    flex-direction:column;
    gap:18px;
    position:relative;
}
.reg-stepper-item{
    display:flex;
    align-items:center;
    gap:10px;
    color:#93a49a;
    font-weight:700;
    font-size:13px;
}
.reg-stepper-item .dot{
    width:34px;
    height:34px;
    border-radius:50%;
    background:#eaf2ec;
    border:2px solid #cfe0d3;
    position:relative;
}
.reg-stepper-item.active{ color:#25652C; }
.reg-stepper-item.active .dot{
    background:#2f7d35;
    border-color:#2f7d35;
}
.reg-stepper-item.active .dot::after{
    content:"";
    position:absolute;
    inset:9px;
    border-radius:50%;
    background:#fff;
}

/* Main */
.reg-main{ padding:6px 4px; }
.reg-step{ display:none; }
.reg-step.active{ display:block; }

.reg-step-title{
    margin:0 0 14px;
    color:#25652C;
    font-weight:700;
    font-size:18px;
    text-align:right;
}

/* Step 1 cards */
.reg-type-grid{
    display:grid;
    grid-template-columns: 1fr 1fr;
    gap:16px;
    margin: 8px 0 18px;
}
.reg-type-card{
    border:1px solid #dfe7e2;
    border-radius:14px;
    padding:18px 16px;
    display:flex;
    flex-direction:column;
    align-items:center;
    justify-content:center;
    gap:10px;
    cursor:pointer;
    position:relative;
    min-height:140px;
    color:#6f7f76;
}
.reg-type-card input{
    position:absolute;
    opacity:0;
    pointer-events:none;
}
.reg-type-radio{
    position:absolute;
    top:12px;
    right:12px;
    width:16px;
    height:16px;
    border-radius:50%;
    border:2px solid #c9d6ce;
    background:#fff;
}
.reg-type-card input:checked + .reg-type-radio{
    border-color:#F99D27;
}
.reg-type-card input:checked + .reg-type-radio::after{
    content:"";
    position:absolute;
    inset:3px;
    border-radius:50%;
    background:#F99D27;
}
.reg-type-icon{ color:#8a9b92; }
.reg-type-name{ font-weight:700; color:#2f3a33; }

/* Fields */
.reg-grid-2{
    display:grid;
    grid-template-columns: 1fr 1fr;
    gap:14px;
}
.reg-grid-1{ display:grid; gap:14px; }

.reg-field{ text-align:right; }
.reg-label{
    display:block;
    margin:12px 0 8px;
    font-size:12px;
    font-weight:800;
    color:#000;
}
.reg-input{
    width:100%;
    border:1px solid #dfe7e2;
    border-radius:10px;
    padding:12px 14px;
    outline:none;
    background:#fff;
}
.reg-input:focus{
    border-color:#9ad0a7;
    box-shadow:0 0 0 .2rem rgba(43,160,82,.15);
}
.has-eye{ position:relative; }


/* Buttons */
.reg-actions{
    display:flex;
    gap:18px;
    margin-top:18px;
}
.reg-btn{
    background:#F99D27;
    border:0;
    border-radius:10px;
    padding:12px 14px;
    font-weight:800;
    color:#fff;
    flex:1;
}
.reg-btn:hover{ background:#ef981d; color:#fff; }

.reg-btn-outline{
    background:#fff;
    border:1px solid #F99D27;
    color:#F99D27;
    border-radius:10px;
    padding:12px 14px;
    font-weight:800;
    flex:1;
}
.reg-btn-outline:hover{
    background:#fff7ee;
    color:#F99D27;
}

/* Progress */
.reg-progress{ margin-top:22px; }
.reg-progress-bar{
    height:10px;
    border-radius:999px;
    background:#e8efe9;
    overflow:hidden;
}
.reg-progress-fill{
    height:100%;
    background:#2f7d35;
    border-radius:999px;
    transition: width .25s ease;
}
.reg-progress-text{
    margin-top:10px;
    text-align:center;
    color:#2f7d35;
    font-weight:700;
    font-size:14px;
}

/* Responsive */
@@media (max-width: 900px){
    .reg-card{ grid-template-columns: 1fr; }
    .reg-side{ order:-1; }
}
@@media (max-width: 520px){
    .reg-title{ font-size:34px; }
    .reg-type-grid{ grid-template-columns: 1fr; }
    .reg-grid-2{ grid-template-columns: 1fr; }
}

/* ===== Alignment for AR (RTL) vs EN/FR (LTR) ===== */

/* عناوين الخطوات */
.reg-page[dir="rtl"] .reg-step-title{
    text-align: right;
}
.reg-page[dir="ltr"] .reg-step-title{
    text-align: left;
}

/* الحقول والليبل */
.reg-page[dir="rtl"] .reg-field,
.reg-page[dir="rtl"] .reg-label{
    text-align: right;
}
.reg-page[dir="ltr"] .reg-field,
.reg-page[dir="ltr"] .reg-label{
    text-align: left;
}

/* داخل الـ input */
.reg-page[dir="rtl"] .reg-input{
    text-align: right;
    direction: rtl;
}
.reg-page[dir="ltr"] .reg-input{
    text-align: left;
    direction: ltr;
}

/* placeholder اتجاهه */
.reg-page[dir="rtl"] .reg-input::placeholder{
    text-align: right;
}
.reg-page[dir="ltr"] .reg-input::placeholder{
    text-align: left;
}

/* ===== Password eye icon with RTL/LTR support ===== */
.reg-input-wrap{
    position: relative;
}

.reg-input-wrap .reg-eye{
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    bottom: auto !important;
    border: 0;
    background: transparent;
    color:#9aa7a0;
    padding: 7px;
    cursor: pointer;
    z-index: 3;
