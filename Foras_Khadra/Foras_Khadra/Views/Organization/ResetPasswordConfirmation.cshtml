@{
    ViewData["Title"] = "تمت إعادة التعيين";
}

<div class="auth-page" dir="rtl">
    <div class="auth-bg-circle"></div>

    <div class="auth-card auth-success">

        <div class="auth-success-icon">
            <svg width="72" height="72" viewBox="0 0 24 24" fill="none">
                <circle cx="12" cy="12" r="10" stroke="#2E7D32" stroke-width="2"/>
                <path d="M7 12.5l3 3 7-7"
                      stroke="#2E7D32"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"/>
            </svg>
        </div>

        <h1 class="auth-title auth-title-sm">تمت إعادة تعيين كلمة المرور</h1>

        <p class="auth-subtitle auth-subtitle-sm">
            تم تحديث كلمة المرور بنجاح، يمكنك الآن تسجيل الدخول باستخدام كلمة المرور الجديدة.
        </p>

        <a asp-controller="Organization"
           asp-action="Login"
           class="btn auth-btn w-100 mt-3">
            تسجيل الدخول
        </a>

    </div>
</div>

<style>
.auth-page{
    min-height: calc(100vh - 120px);
    display:flex;
    align-items:center;
    justify-content:center;
    position:relative;
    padding:40px 16px;
    background:#f4fbf5;
    overflow:hidden;
    font-family:"Tajawal","Cairo",system-ui,-apple-system,"Segoe UI",Arial,sans-serif;
}

.auth-card{
    width:100%;
    max-width:440px;
    background:#fff;
    border-radius:18px;
    padding:34px 26px 30px;
    box-shadow:0 12px 30px rgba(0,0,0,.08);
    z-index:1;
    text-align:center;
}

.auth-success{ padding-top:38px; }

.auth-success-icon{
    display:flex;
    justify-content:center;
    margin-bottom:14px;
}

.auth-title{
    margin:0;
    color:#25652C;
    font-weight:700;
    line-height:1.2;
}
.auth-title-sm{ font-size:30px; }

.auth-subtitle{
    margin:14px 0 0;
    color:#5f6f66;
    font-weight:400;
    line-height:1.8;
}
.auth-subtitle-sm{ font-size:14px; }

.auth-btn{
    background:#F99D27;
    border:none;
    border-radius:10px;
    padding:13px 14px;
    font-weight:800;
    color:#fff;
}
.auth-btn:hover{
    background:#ef981d;
    color:#fff;
}

@@media (max-width: 480px){
    .auth-card{ padding:26px 18px; }
    .auth-title-sm{ font-size:26px; }
}
</style>
