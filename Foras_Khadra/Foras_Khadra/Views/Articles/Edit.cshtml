@model Article
@{
    ViewData["Title"] = "تعديل المقالة";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" asp-append-version="true" href="~/css/articles-create.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
}

<div class="main-container">
    <div class="create-wrapper">

        <!-- العنوان فوق العمودين -->
        <div class="create-page-header">
            <h1 class="page-title">تعديل المقالة</h1>
        </div>

        <!-- الكارد -->
        <div class="create-article-card">

            <!-- العمود الأيسر -->
            <div class="side-illustration">
                <img class="left-illustration" src="~/images/Writer-illustration.svg" alt="Writer Illustration" />
            </div>

            <!-- العمود الأيمن -->
            <div class="form-section">

                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <!-- Id -->
                    <input type="hidden" asp-for="Id" />

                    <!-- الصورة الحالية -->
                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <label class="form-label">الصورة الحالية</label>

                        <div class="current-file-card">

                            <!-- الصورة -->
                            <div class="file-right">
                                <img src="@Model.ImagePath" alt="current image" />
                            </div>

                            <!-- معلومات الملف -->
                            <div class="file-middle">
                                <div class="file-name">
                                    @System.IO.Path.GetFileName(Model.ImagePath)
                                </div>
                                <div class="file-status">
                                    <span class="file-size">Uploaded</span>
                                    <span class="file-check">
                                        <i class="fa-solid fa-circle-check"></i>
                                    </span>
                                </div>
                            </div>

                            <!-- زر الحذف -->
                            <div class="file-left">
                                <button type="button" class="delete-file-btn" title="حذف الصورة">
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                            </div>

                        </div>

                    }


                    <!-- تغيير الصورة -->
                    <label class="form-label">تغيير صورة / فيديو المقالة (اختياري)</label>
                    <div class="upload-area" id="dropzone">
                        <input type="file" id="fileInput" name="Image" hidden accept="image/*" />

                        <div class="upload-icon-wrapper">
                            <i class="fa-solid fa-cloud-arrow-up"></i>
                        </div>

                        <div class="upload-text-main">
                            اسحب الملف هنا أو <span>تصفح من جهازك</span>
                        </div>

                        <div class="upload-hint">
                            صيغ الملفات المدعومة: JPEG, PNG (بحد أقصى 5 ميجابايت)
                        </div>

                        <div id="previewContainer" class="mt-3 d-none">
                            <span class="badge bg-success" id="fileNameDisplay">تم اختيار ملف</span>
                        </div>
                    </div>

                    <!-- الحقول فوق بعض -->
                    <div>
                        <label class="form-label">اسم الكاتب</label>
                        <input asp-for="Author" class="custom-input" placeholder="مثال: أحمد محمد" />
                        <span asp-validation-for="Author" class="text-danger small"></span>
                    </div>

                    <div>
                        <label class="form-label">عنوان المقال</label>
                        <input asp-for="Title" class="custom-input" placeholder="أدخل عنواناً جذاباً" />
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    <!-- المحرر -->
                    <div class="editor-container">
                        <label class="form-label">نص المقالة</label>
                        <textarea asp-for="Content" id="articleEditor"></textarea>
                        <span asp-validation-for="Content" class="text-danger small"></span>

                        <div class="hint-text">
                            <span class="hint-dot"></span>
                            <span>سيتم نشر المقالة بكل من العربية ، الإنجليزية، الفرنسية</span>
                        </div>
                    </div>

                    <!-- الأزرار -->
                    <div class="actions-group">
                        <button type="submit" class="btn-publish">تحديث</button>
                        <a asp-action="Index" class="btn-cancel">رجوع</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>

    <script>
        tinymce.init({
            selector: '#articleEditor',
            directionality: 'rtl',
            language: 'ar',
            height: 300,
            menubar: false,
            plugins: 'lists link table code help wordcount',
            toolbar: 'undo redo | blocks | bold italic underline | alignright aligncenter alignleft | bullist numlist | link table | removeformat',
            content_style: "body { font-family: 'Cairo', sans-serif; font-size: 14px; color: #0C2710; }",
            setup: function (editor) {
                editor.on('init', function () {
                    editor.getContainer().style.borderRadius = "12px";
                    editor.getContainer().style.border = "1.5px solid #E6EFE7";
                });
            }
        });

        const dropzone = document.getElementById('dropzone');
        const fileInput = document.getElementById('fileInput');
        const fileNameDisplay = document.getElementById('fileNameDisplay');
        const previewContainer = document.getElementById('previewContainer');

        dropzone.addEventListener('click', () => fileInput.click());

        dropzone.addEventListener('dragover', (e) => {
            e.preventDefault();
            dropzone.classList.add('dragover');
        });

        dropzone.addEventListener('dragleave', () => dropzone.classList.remove('dragover'));

        dropzone.addEventListener('drop', (e) => {
            e.preventDefault();
            dropzone.classList.remove('dragover');
            if (e.dataTransfer.files.length > 0) {
                handleFiles(e.dataTransfer.files[0]);
            }
        });

        fileInput.addEventListener('change', (e) => {
            if (e.target.files.length > 0) {
                handleFiles(e.target.files[0]);
            }
        });

        function handleFiles(file) {
            if (file && file.type.startsWith('image/')) {
                fileNameDisplay.textContent = `تم اختيار: ${file.name}`;
                previewContainer.classList.remove('d-none');
            } else {
                alert('يرجى اختيار ملف صورة صحيح (PNG, JPG)');
            }
        }
    </script>
}