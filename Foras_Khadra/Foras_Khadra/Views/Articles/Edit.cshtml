@model Article
@{
    ViewData["Title"] = "تعديل المقالة";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" asp-append-version="true" href="~/css/articles-create.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/quill@1.3.7/dist/quill.snow.css" rel="stylesheet" />

    <style>
        .btn-back-dashboard {
            background: transparent;
            color: #f99d27;
            border: 2px solid #f99d27;
            border-radius: 10px;
            padding: 8px 18px;
            font-weight: 700;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
            transition: all 0.25s ease;
        }
        .btn-back-dashboard i { color: inherit; }

        .btn-back-dashboard:hover {
            background: #f99d27;
            color: #fff;
            border-color: #f99d27;
        }
    </style>
}

<div class="main-container">
    <div class="create-wrapper">

        <!-- Header -->
        <div class="create-page-header header-inline">
            <h1 class="page-title">تعديل المقالة</h1>

            <div class="header-actions">
                <a asp-action="Index" class="btn-back-dashboard">
                    <i class="fa-solid fa-newspaper"></i>
                    عرض المقالات
                </a>

                <a asp-controller="Admin" asp-action="Dashboard" class="btn-back-dashboard">
                    <i class="fa-solid fa-gauge"></i>
                    لوحة التحكم
                </a>
            </div>
        </div>

        <!-- Card -->
        <div class="create-article-card">

            <!-- Left -->
            <div class="side-illustration">
                <img class="left-illustration" src="~/images/Writer-illustration.svg" alt="Writer Illustration" />
            </div>

            <!-- Right -->
            <div class="form-section">

                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <input type="hidden" asp-for="Id" />

                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <label class="form-label">الصورة الحالية</label>

                        <div class="current-file-card">
                            <div class="file-right">
                                <img src="@Model.ImagePath" alt="current image" />
                            </div>

                            <div class="file-middle">
                                <div class="file-name">@System.IO.Path.GetFileName(Model.ImagePath)</div>
                                <div class="file-status">
                                    <span class="file-size">Uploaded</span>
                                    <span class="file-check">
                                        <i class="fa-solid fa-circle-check"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    }

                    <label class="form-label">تغيير صورة المقالة (اختياري)</label>
                    <div class="upload-area" id="dropzone">
                        <input type="file" id="fileInput" name="Image" hidden accept="image/*" />

                        <div class="upload-icon-wrapper">
                            <i class="fa-solid fa-cloud-arrow-up"></i>
                        </div>

                        <div class="upload-text-main">
                            اسحب الملف هنا أو <span>تصفح من جهازك</span>
                        </div>

                        <div class="upload-hint">
                            JPEG, PNG (حد أقصى 5MB)
                        </div>

                        <div id="previewContainer" class="mt-3 d-none">
                            <span class="badge bg-success" id="fileNameDisplay">تم اختيار ملف</span>
                        </div>
                    </div>

                    <div class="readonly-field">
                        <label class="form-label">اسم الكاتب</label>
                        <input asp-for="Author" class="custom-input readonly-input" readonly />
                        <span asp-validation-for="Author" class="text-danger small"></span>
                    </div>

                    <div>
                        <label class="form-label">عنوان المقال بالعربي</label>
                        <input asp-for="TitleAr" class="custom-input" placeholder="أدخل عنواناً جذاباً" />
                        <span asp-validation-for="TitleAr" class="text-danger small"></span>
                    </div>

                    <div>
                        <label class="form-label">عنوان المقال بالانجليزي</label>
                        <input asp-for="TitleEn" class="custom-input" placeholder="أدخل عنواناً جذاباً" />
                        <span asp-validation-for="TitleEn" class="text-danger small"></span>
                    </div>

                    <div>
                        <label class="form-label">عنوان المقال بالفرنسي</label>
                        <input asp-for="TitleFr" class="custom-input" placeholder="أدخل عنواناً جذاباً" />
                        <span asp-validation-for="TitleFr" class="text-danger small"></span>
                    </div>

                    <!-- Editor -->
                    <div class="editor-container">
                        <label class="form-label">نص المقالة بالعربي</label>

                        <div id="editorAr" style="height:260px;background:#fff"></div>

                        <!-- هذا هو اللي بينرسل للـ Controller -->
                        <input type="hidden" asp-for="ContentAr" id="ContentAr" />

                        <span asp-validation-for="ContentAr" class="text-danger small"></span>

                    </div>

                    <div class="editor-container">
                        <label class="form-label">نص المقالة بالانجليزي</label>

                        <div id="editorEn" style="height:260px;background:#fff"></div>

                        <!-- هذا هو اللي بينرسل للـ Controller -->
                        <input type="hidden" asp-for="ContentEn" id="ContentEn" />

                        <span asp-validation-for="ContentEn" class="text-danger small"></span>

                    </div>


                    <div class="editor-container">
                        <label class="form-label">نص المقالة بالفرنسي</label>

                        <div id="editorFr" style="height:260px;background:#fff"></div>

                        <!-- هذا هو اللي بينرسل للـ Controller -->
                        <input type="hidden" asp-for="ContentFr" id="ContentFr" />

                        <span asp-validation-for="ContentFr" class="text-danger small"></span>

                    </div>

                    <div class="hint-text">
                        <span class="hint-dot"></span>
                        <span>سيتم نشر المقالة بكل من العربية، الإنجليزية، الفرنسية</span>
                    </div>

                    <div class="actions-group">
                        <button type="submit" class="btn-publish">تحديث</button>
                        <a asp-action="Index" class="btn-cancel">رجوع</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://cdn.jsdelivr.net/npm/quill@1.3.7/dist/quill.min.js"></script>

    <script>
        // ✅ Quill init
            const toolbarOptions = [
            [{ header: [1, 2, 3, false] }],
            ['bold', 'italic', 'underline', 'strike'],
            [{ list: 'ordered' }, { list: 'bullet' }],
            [{ align: [] }],
            ['link'],
            ['clean']
        ];

        const quillAr = new Quill('#editorAr', {
            theme: 'snow',
            modules: { toolbar: toolbarOptions }
        });

        const quillEn = new Quill('#editorEn', {
            theme: 'snow',
            modules: { toolbar: toolbarOptions }
        });

        const quillFr = new Quill('#editorFr', {
            theme: 'snow',
            modules: { toolbar: toolbarOptions }
        });

        // اتجاه النص
        quillAr.root.setAttribute('dir', 'rtl');
        quillEn.root.setAttribute('dir', 'ltr');
        quillFr.root.setAttribute('dir', 'ltr');

        // تحميل المحتوى القديم
        quillAr.root.innerHTML = `@Html.Raw((Model.ContentAr ?? "").Replace("`", "\\`"))`;
        quillEn.root.innerHTML = `@Html.Raw((Model.ContentEn ?? "").Replace("`", "\\`"))`;
        quillFr.root.innerHTML = `@Html.Raw((Model.ContentFr ?? "").Replace("`", "\\`"))`;

        // قبل الإرسال
        document.querySelector('form').addEventListener('submit', function () {
            document.getElementById('ContentAr').value = quillAr.root.innerHTML;
            document.getElementById('ContentEn').value = quillEn.root.innerHTML;
            document.getElementById('ContentFr').value = quillFr.root.innerHTML;
        });

        // ✅ Upload preview
        const dropzone = document.getElementById('dropzone');
        const fileInput = document.getElementById('fileInput');
        const fileNameDisplay = document.getElementById('fileNameDisplay');
        const previewContainer = document.getElementById('previewContainer');

        dropzone.addEventListener('click', () => fileInput.click());

        dropzone.addEventListener('dragover', (e) => {
            e.preventDefault();
            dropzone.classList.add('dragover');
        });

        dropzone.addEventListener('dragleave', () => dropzone.classList.remove('dragover'));

        dropzone.addEventListener('drop', (e) => {
            e.preventDefault();
            dropzone.classList.remove('dragover');
            if (e.dataTransfer.files.length > 0) handleFiles(e.dataTransfer.files[0]);
        });

        fileInput.addEventListener('change', (e) => {
            if (e.target.files.length > 0) handleFiles(e.target.files[0]);
        });

        function handleFiles(file) {
            if (file && file.type.startsWith('image/')) {
                fileNameDisplay.textContent = `تم اختيار: ${file.name}`;
                previewContainer.classList.remove('d-none');
            } else {
                alert('يرجى اختيار صورة فقط');
            }
        }
    </script>
}
