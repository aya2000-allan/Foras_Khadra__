@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["TitlePage"];
    var culture = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
    var dir = culture == "ar" ? "rtl" : "ltr";
}

<!DOCTYPE html>
<html lang="@culture" dir="@dir">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Localizer["TitlePage"]</title>

    <style>

        .page-wrapper {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            margin: 20px;
            background-color: #f9f9f9;
            color: #333;
        }

        /* LTR (English & French) */
        html[dir="ltr"] .page-wrapper {
            direction: ltr;
            text-align: left;
        }

        /* RTL (Arabic) */
        html[dir="rtl"] .page-wrapper {
            direction: rtl;
            text-align: right;
        }

        h1 {
            margin-bottom: 20px;
        }

        h2 {
            color: #2a7a2f;
            margin-top: 30px;
        }

        p,
        li {
            margin: 8px 0;
        }

        ul {
            padding-inline-start: 20px;
        }

        .contact {
            margin-top: 20px;
            font-weight: bold;
        }
    </style>
</head>

<body>

    <!--  كل المحتوى داخل Wrapper -->
    <div class="page-wrapper">

        <h1>@Localizer["TitlePage"]</h1>

        <h2>@Localizer["TitleIntro"]</h2>
        <p>@Localizer["Intro"]</p>

        <h2>@Localizer["TermsUsage"]</h2>
        <ul>
            <li>@Localizer["TermsUsage1"]</li>
            <li>@Localizer["TermsUsage2"]</li>
            <li>@Localizer["TermsUsage3"]</li>
        </ul>

        <h2>@Localizer["ContentIP"]</h2>
        <ul>
            <li>@Localizer["ContentIP1"]</li>
            <li>@Localizer["ContentIP2"]</li>
        </ul>

        <h2>@Localizer["Accounts"]</h2>
        <ul>
            <li>@Localizer["Accounts1"]</li>
            <li>@Localizer["Accounts2"]</li>
        </ul>

        <h2>@Localizer["Liability"]</h2>
        <ul>
            <li>@Localizer["Liability1"]</li>
            <li>@Localizer["Liability2"]</li>
        </ul>

        <h2>@Localizer["ExternalLinks"]</h2>
        <p>@Localizer["ExternalLinksText"]</p>

        <h2>@Localizer["Contact"]</h2>
        <p class="contact">@Localizer["ContactEmail"]</p>

    </div>

</body>
</html>
