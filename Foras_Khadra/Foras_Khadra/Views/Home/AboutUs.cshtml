@model IEnumerable<Foras_Khadra.Models.TeamMember>

@{
    Layout = "_Layout"; // إذا كنت تستخدم Layout
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">فريقنا</h2>

    @if (Model != null && Model.Any())
    {
        @foreach (var group in Model.GroupBy(m => m.Department))
        {
            <h3 class="mb-3">@group.Key</h3>

            <div class="row">
                @foreach (var member in group.OrderByDescending(m => m.Membership))
                {
                    <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                        <div class="card h-100 text-center shadow-sm">
                            @if (!string.IsNullOrEmpty(member.ImagePath))
                            {
                                <img src="@member.ImagePath" class="card-img-top" style="height:200px; object-fit:cover;" alt="@member.Name" />
                            }
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="javascript:void(0);" data-bs-toggle="modal" data-bs-target="#memberModal@member.Id">
                                        @member.Name
                                    </a>
                                </h5>
                                <p class="card-text">@member.Membership</p>
                            </div>
                        </div>

                        <!-- Modal لكل عضو -->
                        <div class="modal fade" id="memberModal@member.Id" tabindex="-1" aria-labelledby="memberModalLabel@member.Id" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="memberModalLabel@member.Id">@member.Name</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body text-center">
                                        @if (!string.IsNullOrEmpty(member.ImagePath))
                                        {
                                            <img src="@member.ImagePath" class="img-fluid mb-3" style="max-height:250px; object-fit:cover;" alt="@member.Name" />
                                        }
                                        <p><strong>القسم:</strong> @member.Department</p>
                                        <p><strong>المنصب:</strong> @member.Membership</p>
                                        <p><strong>السيرة الذاتية:</strong> @member.Bio</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                }
            </div>
        }
    }
    else
    {
        <p class="text-center">لا يوجد أعضاء بعد.</p>
    }
</div>

<!-- Bootstrap JS Bundle (Popper + JS) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
