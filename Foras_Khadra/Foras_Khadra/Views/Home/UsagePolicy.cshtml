@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["TitlePage"];
    var culture = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
    var dir = culture == "ar" ? "rtl" : "ltr";
}

<!DOCTYPE html>
<html lang="@culture" dir="@dir">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Localizer["TitlePage"]</title>
    <style>
        

        h2 {
            color: #2a7a2f; /* لون أخضر يناسب الهوية */
            margin-top: 30px;
        }

        p, li {
            margin: 8px 0;
        }

        ul {
            padding-inline-start: 20px; /* يدعم LTR و RTL */
        }

        .contact {
            margin-top: 20px;
            font-weight: bold;
        }

        /* تطبيق اتجاه النص على العناصر حسب اللغة */
        .text-direction {
            direction: @(culture == "ar" ? "rtl" : "ltr");
            text-align: @(culture == "ar" ? "right" : "left");
        }
    </style>
</head>
<body>

    <h1 class="text-direction">@Localizer["TitlePage"]</h1>

    <h2 class="text-direction">@Localizer["TitleIntro"]</h2>
    <p class="text-direction">@Localizer["Intro"]</p>

    <h2 class="text-direction">@Localizer["PlatformUse"]</h2>
    <ul class="text-direction">
        <li>@Localizer["PlatformUse1"]</li>
        <li>@Localizer["PlatformUse2"]</li>
        <li>@Localizer["PlatformUse3"]</li>
    </ul>

    <h2 class="text-direction">@Localizer["UserContent"]</h2>
    <ul class="text-direction">
        <li>@Localizer["UserContent1"]</li>
        <li>@Localizer["UserContent2"]</li>
        <li>@Localizer["UserContent3"]</li>
    </ul>

    <h2 class="text-direction">@Localizer["Accounts"]</h2>
    <ul class="text-direction">
        <li>@Localizer["Accounts1"]</li>
        <li>@Localizer["Accounts2"]</li>
    </ul>

    <h2 class="text-direction">@Localizer["PlatformRights"]</h2>
    <ul class="text-direction">
        <li>@Localizer["PlatformRights1"]</li>
        <li>@Localizer["PlatformRights2"]</li>
    </ul>

    <h2 class="text-direction">@Localizer["Contact"]</h2>
    <p class="contact text-direction">@Localizer["ContactEmail"]</p>

</body>
</html>