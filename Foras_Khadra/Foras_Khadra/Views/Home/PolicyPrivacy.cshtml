/* 🔁 انعكاس تلقائي للغات LTR */
.ltr .policy-section li::before {
    transform: scaleX(-1);
}
.policy-contact-pill {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: #F99D27;
    color: #fff;
    border-radius: 999px;
    padding: 8px 16px;
    font-weight: 800;
    font-size: 13px;
    text-decoration: none;
    margin-top: 6px;

    transition: all .25s ease;
}

/* Hover effect */
.policy-contact-pill:hover {
    background: #e88914;
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(249,157,39,.45);
    text-decoration: none;
    color: #fff;
}


