@using Microsoft.Extensions.Options
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["TitlePage"];
    var culture = System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
}

<!DOCTYPE html>
<html lang="@culture">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
       
        .rtl {
            direction: rtl;
            text-align: right;
        }

        .ltr {
            direction: ltr;
            text-align: left;
        }

        h2 {
            color: #2a7a2f;
            margin-top: 30px;
        }

        p, li {
            margin: 8px 0;
        }

        ul {
            padding-right: 20px;
        }

        .contact {
            margin-top: 20px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="@(culture == "ar" ? "rtl" : "ltr")">
        <h1>@Localizer["TitlePage"]</h1>
        <h2>@Localizer["TitleIntro"]</h2>
        <p>@Localizer["Intro"]</p>

        <h2>@Localizer["DataCollected"]</h2>
        <ul>
            <li>@Localizer["DataCollected1"]</li>
            <li>@Localizer["DataCollected2"]</li>
        </ul>

        <h2>@Localizer["DataUsage"]</h2>
        <ul>
            <li>@Localizer["DataUsage1"]</li>
            <li>@Localizer["DataUsage2"]</li>
            <li>@Localizer["DataUsage3"]</li>
        </ul>

        <h2>@Localizer["Cookies"]</h2>
        <ul>
            <li>@Localizer["Cookies1"]</li>
            <li>@Localizer["Cookies2"]</li>
        </ul>

        <h2>@Localizer["DataSharing"]</h2>
        <ul>
            <li>@Localizer["DataSharing1"]</li>
            <li>@Localizer["DataSharing2"]</li>
            <li>@Localizer["DataSharing3"]</li>
        </ul>

        <h2>@Localizer["DataProtection"]</h2>
        <ul>
            <li>@Localizer["DataProtection1"]</li>
            <li>@Localizer["DataProtection2"]</li>
        </ul>

        <h2>@Localizer["UserRights"]</h2>
        <ul>
            <li>@Localizer["UserRights1"]</li>
            <li>@Localizer["UserRights2"]</li>
        </ul>

        <h2>@Localizer["ChildrenPrivacy"]</h2>
        <p>@Localizer["ChildrenPrivacyText"]</p>

        <h2>@Localizer["Changes"]</h2>
        <p>@Localizer["ChangesText"]</p>

        <h2>@Localizer["Contact"]</h2>
        <p class="contact">@Localizer["ContactEmail"]</p>
    </div>
</body>
</html>
