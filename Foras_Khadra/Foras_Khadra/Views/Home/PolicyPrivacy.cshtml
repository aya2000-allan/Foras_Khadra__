@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["TitlePage"];
    var culture = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
    var isRtl = culture == "ar";
}

<style>
    /* ===== Page Background like screenshot ===== */
    .policy-page {
        @* background:#e8ece9; /* dark green behind */ *@
        padding: 42px 14px 70px;
        min-height: 100vh;
    }

    /* Top title area */
   /* Top title area */
.policy-hero {
    background-color: #25652C;
    text-align: center;
    color: #fff;

    max-width: 880px;
    margin: 0 auto 18px;   /* نفس الكارد تمامًا */

    border-top-left-radius: 12px;
    border-top-right-radius: 12px;
    padding: 16px 12px;
    border-bottom: 4px solid #F99D27;

}


    .policy-hero h1 {
        margin: 0;
        font-weight: 800;
        font-size: 22px;
        line-height: 1.2;
        font-family: "Cairo","Tajawal",system-ui,-apple-system,"Segoe UI",Arial,sans-serif;
    }

    /* White main card */
    .policy-card {
        max-width: 880px;
        margin: 0 auto;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 14px 35px rgba(0,0,0,.18);
        padding: 18px 16px 16px;
    }

    /* Each section (light gray box with orange bar) */
    .policy-section {
        position: relative;
        background: #f6f7f6;
        border: 1px solid #e8ece9;
        border-radius: 10px;
        padding: 14px 16px;
        margin: 12px 0;
    }

    .policy-section::before {
        content: "";
        position: absolute;
        top: 12px;
        bottom: 12px;
        width: 4px;
        background: #F99D27; /* orange bar */
        border-radius: 6px;
        inset-inline-end: 10px; /* right in RTL, left in LTR automatically */
    }

    /* Titles inside boxes */
    .policy-section h2 {
        margin: 0 0 10px 0;
        color: #25652C;
        font-weight: 800;
        font-size: 16px;
        font-family: "Cairo","Tajawal",system-ui,-apple-system,"Segoe UI",Arial,sans-serif;
        padding-inline-end: 16px; /* space away from orange bar */
    }

    .policy-section p,
    .policy-section li {
        color: #2f3a33;
        font-size: 13px;
        line-height: 1.9;
        margin: 0 0 8px 0;
        font-family: "Cairo","Tajawal",system-ui,-apple-system,"Segoe UI",Arial,sans-serif;
    }

    .policy-section p:last-child { margin-bottom: 0; }

    /* Lists: use logical padding so RTL/LTR is correct */
    .policy-section ul {
        margin: 0;
        padding-inline-start: 18px;
        padding-inline-end: 0;
    }

    .policy-section li { margin: 6px 0; }

    /* Contact as pill like screenshot */
    .policy-contact-pill {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background: #F99D27;
        color: #fff;
        border-radius: 999px;
        padding: 8px 14px;
        font-weight: 800;
        font-size: 13px;
        text-decoration: none;
        margin-top: 6px;
    }
/* Remove default bullets */
.policy-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

/* Each list item as flex to align icon + text */
.policy-section li {
    display: flex;
    align-items: flex-start;
    gap: 10px;
    margin: 10px 0;
}

