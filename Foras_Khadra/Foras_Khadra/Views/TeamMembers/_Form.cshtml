@model Foras_Khadra.Models.TeamMember

<div class="form-group">
    <label asp-for="FullName"></label>
    <input asp-for="FullName" class="form-control" />
</div>

<div class="form-group">
    <label asp-for="Role"></label>
    <select asp-for="Role" class="form-control" asp-items="Html.GetEnumSelectList<Foras_Khadra.Models.Role>()">
        <option value="">اختر الدور</option>
    </select>
</div>

<div class="form-group">
    <label asp-for="Department"></label>
    <input asp-for="Department" class="form-control" />
</div>

<div class="form-group">
    <label asp-for="Bio"></label>
    <textarea asp-for="Bio" class="form-control"></textarea>
</div>

<div class="form-group">
    <label asp-for="ImageFile"></label>
    <input asp-for="ImageFile" type="file" class="form-control" />

    @if (Model != null && !string.IsNullOrEmpty(Model.ImagePath))
    {
        <img src="@Model.ImagePath" width="100" class="mt-2" />
    }
    else
    {
        <img src="/images/team/placeholder.png" width="100" class="mt-2" />
    }
</div>

<button type="submit" class="btn btn-success">حفظ</button>