@model Foras_Khadra.Models.Opportunity

@{
    ViewData["Title"] = Model.Title;
}

<link href="~/css/opportunity-deatails.css" rel="stylesheet" />
<div class="opp-container">
    <div class="opp-header">
        <div class="opp-title">
            
            <div class="btn-back-container">
                @if (User.IsInRole("Admin"))
                {
                    <a asp-controller="Opportunity" asp-action="Index" style="text-decoration:none"><span style="color:#F99D27">↪</span></a>
                }
                @if (User.IsInRole("Organization"))
                {
                    <a asp-controller="Opportunity" asp-action="OrgOpportunities" style="text-decoration:none"><span style="transform: scaleY(-1);color:#F99D27">↪</span></a>
                }
                @if (User.IsInRole("User"))
                {
                    <a asp-controller="Home" asp-action="AllOpportunities" style="text-decoration:none" ><span style="transform: scaleY(-1);color:#F99D27">↪</span></a>
                }
            </div>
            <span>@Model.Title</span>
        </div>
        @if (!string.IsNullOrEmpty(Model.ApplyLink))
        {
            if (User.IsInRole("Admin") || User.IsInRole("User") || User.IsInRole("Organization"))
            {
                <a href="@Model.ApplyLink" target="_blank" class="apply-button">قدم الآن</a>
            }
            else if (!User.Identity.IsAuthenticated)
            {
                <a href="javascript:void(0);" class="apply-button" id="guestApply">قدم الآن</a>
            }
        }

       
    </div>

    <div class="main-card">
        <div class="card-info-content">
            <div class="info-grid">
                <span class="info-label">تاريخ النشر</span>
                <span class="info-value">@Model.PublishDate.ToShortDateString()</span>

                <span class="info-label">نوع الفرصة</span>
                <span class="info-value">@Model.Type</span>

                <span class="info-label">نشر بواسطة</span>
                <span class="info-value">
                    @(Model.IsPublishedByAdmin ? "الأدمن" : Model.PublishedBy)
                    @if (Model.IsPublishedByAdmin)
                    {
                        <span class="verify-badge" title="موثق إداري">✔</span>
                    }
                </span>

                <span class="info-label">الدول المتاحة</span>
                <span class="info-value">@Model.AvailableCountries</span>

                <span class="info-label">الوصف</span>
                <span class="info-value"> @Model.Description</span>
            </div>
            
        </div>
        <div class="card-image-wrapper">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath" alt="Opportunity Image" />
            }
            else
            {
                <div style="background:#eee; height:100%;"></div>
            }
        </div>
    </div>

    <div class="details-card">
        <div class="section-title">التفاصيل</div>
        <div class="section-content">@Model.Details</div>

        <div class="section-title">معايير القبول</div>
        <div class="section-content">@Model.EligibilityCriteria</div>

        <div class="section-title">مميزات الفرصة</div>
        <div class="section-content">@Model.Benefits</div>
    </div>

   
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.getElementById("guestApply")?.addEventListener("click", function () {
            Swal.fire({
                icon: 'info',
                title: 'تسجيل الدخول مطلوب',
                html: 'سجل أو أنشئ حساب لتتمكن من التقديم.<br>إذا كنت قد أنشأت حساب سابقاً، قم بتسجيل الدخول.',
                confirmButtonText: 'حسناً'
            });
        });
    </script>
}