@using System.Globalization
@model Foras_Khadra.Models.Opportunity

@{
    ViewData["Title"] = Model.Title;
}

<link href="~/css/opportunity-deatails.css" rel="stylesheet" />
<div class="opp-container">
    <div class="opp-header">
        <div class="opp-title">
            
            <div class="btn-back-container">
                @if (User.IsInRole("Admin"))
                {
                    <a asp-controller="Opportunity" asp-action="Index" style="text-decoration:none"><span style="color:#F99D27">↪</span></a>
                }
                @if (User.IsInRole("Organization"))
                {
                    <a asp-controller="Opportunity" asp-action="OrgOpportunities" style="text-decoration:none"><span style="transform: scaleY(-1);color:#F99D27">↪</span></a>
                }
                @if (User.IsInRole("User"))
                {
                    <a asp-controller="Home" asp-action="AllOpportunities" style="text-decoration:none" ><span style="transform: scaleY(-1);color:#F99D27">↪</span></a>
                }
            </div>
            <span>@Model.Title</span>
        </div>
        @if (!string.IsNullOrEmpty(Model.ApplyLink))
        {
            if (User.IsInRole("Admin") || User.IsInRole("User") || User.IsInRole("Organization"))
            {
                <a href="@Model.ApplyLink" target="_blank" class="apply-button">قدم الآن</a>
            }
            else if (!User.Identity.IsAuthenticated)
            {
                <a href="javascript:void(0);" class="apply-button" id="guestApply">قدم الآن</a>
            }
        }

       
    </div>

    <div class="main-card">
        <div class="card-info-content">
            <div class="info-grid">
                <span class="info-label">تاريخ النشر</span>
                <span class="info-value">@Model.PublishDate.ToShortDateString()</span>

                <span class="info-label">نوع الفرصة</span>
                <span class="info-value">@Model.Type</span>

                <span class="info-label">نشر بواسطة</span>
                <span class="info-value">
                    @(Model.IsPublishedByAdmin ? "الأدمن" : Model.PublishedBy)
                    @if (Model.IsPublishedByAdmin)
                    {
                        <span class="verify-badge" title="موثق إداري">✔</span>
                    }
                </span>

                <span class="info-label">الدول المتاحة</span>
                <span class="info-value">@Model.AvailableCountries</span>

                <span class="info-label">الوصف</span>
                <span class="info-value"> @Model.Description</span>
            </div>
            
        </div>
        <div class="card-image-wrapper">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath" alt="Opportunity Image" />
            }
            else
            {
                <div style="background:#eee; height:100%;"></div>
            }
        </div>
    </div>

    <div class="details-card">
        <div class="section-title">التفاصيل</div>
        <div class="section-content">@Model.Details</div>

        <div class="section-title">معايير القبول</div>
        <div class="section-content">@Model.EligibilityCriteria</div>

        <div class="section-title">مميزات الفرصة</div>
        <div class="section-content">@Model.Benefits</div>
    </div>

   
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <scrip>
        document.getElementById("guestApply")?.addEventListener("click", function () {
            Swal.fire({
                imageUrl: '/images/login-required.svg',
                imageWidth: 165,
                imageHeight: 129,
                imageAlt: 'Login required illustration',
                title: 'تسجيل الدخول مطلوب !',
                html: 'أنشئ حساب لتتمكن من التقديم ، وإذا كان لديك حساب بالفعل<br>سجل الدخول الآن',
                showCancelButton: true,
                confirmButtonText: 'تسجيل الدخول',
                cancelButtonText: 'إنشاء حساب',
                reverseButtons: true,
                customClass: {
                    popup: 'custom-swal-popup',
                    title: 'custom-swal-title',
                    htmlContainer: 'custom-swal-text',
                    confirmButton: 'custom-swal-confirm',
                    cancelButton: 'custom-swal-cancel',
                    closeButton: 'custom-swal-close'
                },
                showCloseButton: true,
                buttonsStyling: false,
                didOpen: () => {
                    const popup = Swal.getPopup();
                    popup.style.border = '1px solid #C77E1F';
                    popup.style.borderRadius = '16px';
                    popup.style.paddingBottom = '25px';
                    popup.style.paddingTop = '20px';
                    popup.style.width='740px';
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/Account/Login';
                } else if (result.dismiss === Swal.DismissReason.cancel) {
                    window.location.href = '/Account/RegisterUser';
                }
            });
        });
    </scrip>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // جلب لغة الموقع الحالية من Razor
        const currentLang = '@CultureInfo.CurrentUICulture.TwoLetterISOLanguageName';

        // إعداد نصوص التنبيهات حسب اللغة
        const swalTexts = {
            title: 'تسجيل الدخول مطلوب !',
            html: 'أنشئ حساب لتتمكن من التقديم ، وإذا كان لديك حساب بالفعل<br>سجل الدخول الآن',
            confirm: 'تسجيل الدخول',
            cancel: 'إنشاء حساب',
            dir: 'rtl' // الافتراضي عربي
        };

        if(currentLang === 'en') {
            swalTexts.title = 'Login Required!';
            swalTexts.html = 'Create an account to apply, or login if you already have one.';
            swalTexts.confirm = 'Login';
            swalTexts.cancel = 'Register';
            swalTexts.dir = 'ltr';
        }
        else if(currentLang === 'fr') {
            swalTexts.title = 'Connexion requise !';
            swalTexts.html = 'Créez un compte pour postuler, ou connectez-vous si vous en avez déjà un.';
            swalTexts.confirm = 'Se connecter';
            swalTexts.cancel = "Créer un compte";
            swalTexts.dir = 'ltr';
        }

        document.getElementById("guestApply")?.addEventListener("click", function () {
            Swal.fire({
                imageUrl: '/images/login-required.svg',
                imageWidth: 165,
                imageHeight: 129,
                imageAlt: 'Login required illustration',
                title: swalTexts.title,
                html: swalTexts.html,
                showCancelButton: true,
                confirmButtonText: swalTexts.confirm,
                cancelButtonText: swalTexts.cancel,
                reverseButtons: true,
                customClass: {
                    popup: 'custom-swal-popup',
                    title: 'custom-swal-title',
                    htmlContainer: 'custom-swal-text',
                    confirmButton: 'custom-swal-confirm',
                    cancelButton: 'custom-swal-cancel',
                    closeButton: 'custom-swal-close'
                },
                showCloseButton: true,
                buttonsStyling: false,
                didOpen: () => {
                    const popup = Swal.getPopup();
                    popup.style.border = '1px solid #C77E1F';
                    popup.style.borderRadius = '16px';
                    popup.style.paddingBottom = '25px';
                    popup.style.paddingTop = '20px';
                    popup.style.width='740px';

                    // ضبط اتجاه النص داخل الـ Swal
                    popup.style.direction = swalTexts.dir;
                    popup.querySelector('.swal2-title')?.setAttribute('dir', swalTexts.dir);
                    popup.querySelector('.swal2-html-container')?.setAttribute('dir', swalTexts.dir);
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/Account/Login';
                } else if (result.dismiss === Swal.DismissReason.cancel) {
                    window.location.href = '/Account/RegisterUser';
                }
            });
        });
    </script>
    <style>
       
        .custom-swal-title {
            color: #333;
            font-size: 24px;
            font-weight: 700;
        }
        
        .custom-swal-text {
            color: #666;
            font-size: 20px;
        }
       


        .custom-swal-confirm {
            background-color: #F99D27;
            color: white;
            border: none;
            padding: 14px 45px;
            font-size: 18px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin: 0 8px;
            width: 200;
            height: 65;
            border-radius: 16px;
        }
        
        .custom-swal-confirm:hover {
            background-color: #e88d1a;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(249, 157, 39, 0.3);
        }
        
        .custom-swal-cancel {
            background-color: white;
            color: #F99D27;
            border: 2px solid #F99D27;
            padding: 14px 45px;
            font-size: 18px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin: 0 8px;
            width: 200;
            height: 65;
            border-radius: 16px;
        }
        
        .custom-swal-cancel:hover {
            background-color: #FFF5E6;
            transform: translateY(-2px);
        }
        
        .custom-swal-close {
            color: #999;
            font-size: 28px;
            position: relative;
            left: auto !important;
            right: -93% !important;
        }
        
        .custom-swal-close:hover {
            color: #F99D27;
        }
    </style>
}