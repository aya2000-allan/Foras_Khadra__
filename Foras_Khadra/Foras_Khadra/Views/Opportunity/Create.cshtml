@model Foras_Khadra.Models.OpportunityCreateVM
@using Foras_Khadra.Models

<h2>إضافة فرصة جديدة</h2>

<form id="createForm" asp-action="Create" method="post" enctype="multipart/form-data">

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Image"></label>
        <input asp-for="Image" type="file" class="form-control" required />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <div class="mb-3">
    <div class="mb-3">
    <label asp-for="PublishedBy"></label>
    @if (!string.IsNullOrEmpty(Model.PublishedBy))
    {
        <input asp-for="PublishedBy" class="form-control" readonly />
    }
    else
    {
        <input asp-for="PublishedBy" class="form-control" />
    }
</div>

    <div class="mb-3">
        <label asp-for="Type"></label>
        <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<OpportunityType>()" required>
            <option value="">-- اختر النوع --</option>
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Details"></label>
        <textarea asp-for="Details" class="form-control" rows="3" required></textarea>
        <span asp-validation-for="Details" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AvailableCountries"></label>
        <textarea asp-for="AvailableCountries" class="form-control" rows="2" required></textarea>
        <span asp-validation-for="AvailableCountries" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EligibilityCriteria"></label>
        <textarea asp-for="EligibilityCriteria" class="form-control" rows="2" required></textarea>
        <span asp-validation-for="EligibilityCriteria" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Benefits"></label>
        <textarea asp-for="Benefits" class="form-control" rows="2" required></textarea>
        <span asp-validation-for="Benefits" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ApplyLink"></label>
        <input asp-for="ApplyLink" class="form-control" required />
        <span asp-validation-for="ApplyLink" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">حفظ</button>
    <a asp-action="Index" class="btn btn-secondary">رجوع</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
