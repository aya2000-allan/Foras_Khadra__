@model Foras_Khadra.Models.OpportunityCreateVM
@using Foras_Khadra.Models
@using System.Globalization;
@using Microsoft.AspNetCore.Mvc.Localization
@using Foras_Khadra.Helpers

@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Title"];
    Layout = "_Layout";
    var culture = System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
    var dir = culture == "ar" ? "rtl" : "ltr";

}

<link rel="stylesheet" href="~/css/opportunity-create.css" />

<div class="header">
    <h2 class="page-title">@Localizer["AddOpportunityTitle"]</h2>
    @if (!User.IsInRole("Organization"))
    {
        <a asp-controller="Opportunity" asp-action="Index" class="btn-back-dashboard">@Localizer["BackToDashboard"]  </a>
    }
</div>

<div class="page-wrapper">
    <div class="form-panel">
        <form id="createForm" asp-action="Create" method="post" enctype="multipart/form-data">
            <ul class="nav nav-tabs" id="languageTabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="arabic-tab" data-bs-toggle="tab" href="#arabic" role="tab">@Localizer["ArabicTab"]</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="english-tab" data-bs-toggle="tab" href="#english" role="tab">@Localizer["EnglishTab"]</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="french-tab" data-bs-toggle="tab" href="#french" role="tab">@Localizer["FrenchTab"]</a>
                </li>
            </ul>
            <!-- Image -->
            <!-- Image upload -->
            <div class="upload-box">
                <h3 class="discription">@Localizer["UploadOpportunityImage"]</h3>
                
                <div id="imagePreviewContainer" class="current-image-preview" style="display:none; align-items:center; gap:12px; margin-bottom:12px; background-color:#EEF1F7; justify-content:space-between; border-radius:26px; padding:12px;">
                    <img id="previewImg" src="#" alt="@Localizer["OpportunityImageAlt"]" style="width:90px; height:auto; border-radius:16px; box-shadow:0 1px 4px rgba(0,0,0,0.08);" />
                    <div id="previewInfo" style="display:flex; align-items:center; gap:6px; font-weight:600;">
                        <span id="previewName"></span>
                        <span style="color:green; font-size:20px;">âœ…</span>
                    </div>
                </div>
                
                <label class="upload-area" id="uploadArea">
                    <input asp-for="Image" id="imageInput" type="file" hidden accept="image/jpeg, image/png" />
                    <div class="upload-icon"><img src="~/images/upload-icon.svg" alt=""></div>
                    <p class="dragText">@Localizer["DragDropText"]</p>
                    <small>JPEG, PNG</small>
                </label>
                <input type="hidden" name="RemoveImage" id="RemoveImage" value="false" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>


            <!-- Tabs -->
           

            <div class="tab-content mt-3">
                <!-- Arabic Tab -->
                <div class="tab-pane fade show active" id="arabic" role="tabpanel">
                    <div class="field">
                        <input asp-for="TitleAr" placeholder="@Localizer["OpportunityTitleAr"]" required />
                        <span asp-validation-for="TitleAr" class="text-danger"></span>
                    </div>
                    <div class="field">
                        <h3 class="discription">@Localizer["EligibilityCriteria"]</h3>
                        <div id="editorEligibilityAr" style="height: 150px;"></div>
                        <input type="hidden" asp-for="EligibilityCriteriaAr" id="eligibilityAr" required />
                        <span asp-validation-for="EligibilityCriteriaAr" class="text-danger"></span>
                    </div>
                    <div class="field">
                        <h3 class="discription">@Localizer["Benefits"]</h3>
                        <div id="editorBenefitsAr" style="height: 150px;"></div>
                        <input type="hidden" asp-for="BenefitsAr" id="benefitsAr" required />
                        <span asp-validation-for="BenefitsAr" class="text-danger"></span>
                    </div>
                    <div class="field">
                        <h3 class="discription">@Localizer["OpportunityDescription"] </h3>
                        <div id="editorDescriptionAr" style="height: 180px;"></div>
                        <input type="hidden" asp-for="DescriptionAr" id="descriptionAr" required />
                        <span asp-validation-for="DescriptionAr" class="text-danger"></span>
                    </div>
                    <div class="field">
                        <h3 class="discription">@Localizer["OpportunityDetails"] </h3>
                        <!-- Arabic -->
                        <div id="editorAr" style="height: 250px;"></div>
                        <input type="hidden" asp-for="DetailsAr" id="detailAr" required />
                        <span asp-validation-for="DetailsAr" class="text-danger"></span>
                    </div>
                </div>

                <!-- English Tab -->
                <div class="tab-pane fade" id="english" role="tabpanel">
                    <div class="field">
                        <input asp-for="TitleEn" placeholder="@Localizer["OpportunityTitleAr"]" required />
                        <span asp-validation-for="TitleEn" class="text-danger"></span>
                    </div>
                    <div class="field">
                        <h3 class="discription">@Localizer["EligibilityCriteria"]</h3>
                        <div id="editorEligibilityEn" style="height: 150px;"></div>
                        <input type="hidden" asp-for="EligibilityCriteriaEn" id="eligibilityEn" required />
                        <span asp-validation-for="EligibilityCriteriaEn" class="text-danger"></span>
                    </div>
                    <div class="field">
                        <h3 class="discription">
                            @Localizer["Benefits"]
                        </h3>
                        <div id="editorBenefitsEn" style="height: 150px;"></div>
                        <input type="hidden" asp-for="BenefitsEn" id="benefitsEn" required />
                        <span asp-validation-for="BenefitsEn" class="text-danger"></span>
                    </div>
                    <div class="field">

                        <h3 class="discription">
                            @Localizer["OpportunityDescription"]
                        </h3>
                        <div id="editorDescriptionEn" style="height: 180px;"></div>
                        <input type="hidden" asp-for="DescriptionEn" id="descriptionEn" required />
                        <span asp-validation-for="DescriptionEn" class="text-danger"></span>
                    </div>
                    <div class="field">

                        <h3 class="discription">
                            @Localizer["OpportunityDetails"]
                        </h3>
                        <div id="editorEn" style="height: 250px;"></div>
                        <input type="hidden" asp-for="DetailsEn" id="detailEn" required />
                        <span asp-validation-for="DetailsEn" class="text-danger"></span>
                    </div>
                </div>

                <!-- French Tab -->
                <div class="tab-pane fade" id="french" role="tabpanel">
                    <div class="field">
                        <input asp-for="TitleFr" placeholder="@Localizer["OpportunityTitleAr"]" required />
                        <span asp-validation-for="TitleFr" class="text-danger"></span>
                    </div>
                    <div class="field">
                        <h3 class="discription">@Localizer["EligibilityCriteria"]</h3>
                        <div id="editorEligibilityFr" style="height: 150px;"></div>
                        <input type="hidden" asp-for="EligibilityCriteriaFr" id="eligibilityFr" required />
                        <span asp-validation-for="EligibilityCriteriaFr" class="text-danger"></span>
                    </div>
                    <div class="field">
                        <h3 class="discription">@Localizer["Benefits"]</h3>
                        <div id="editorBenefitsFr" style="height: 150px;"></div>
                        <input type="hidden" asp-for="BenefitsFr" id="benefitsFr" required />
                        <span asp-validation-for="BenefitsFr" class="text-danger"></span>
                    </div>
                    <div class="field">
                        <h3 class="discription">@Localizer["OpportunityDescription"]</h3>
                        <div id="editorDescriptionFr" style="height: 180px;"></div>
                        <input type="hidden" asp-for="DescriptionFr" id="descriptionFr" required />
                        <span asp-validation-for="DescriptionFr" class="text-danger"></span>
                    </div>
                    <div class="field">
                        <h3 class="discription">@Localizer["OpportunityDetails"]</h3>
                        <div id="editorFr" style="height: 250px;"></div>
                        <input type="hidden" asp-for="DetailsFr" id="detailFr" required />
                        <span asp-validation-for="DetailsFr" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Published By -->
            <div class="field">
                <label> @Localizer["PublishedBy"] </label>
                <input type="text"
                       asp-for="PublishedBy"
                       readonly
                       class="published-by-box"
                       style="background: #bbcfbe7d;" />
                <span asp-validation-for="PublishedBy" class="text-danger"></span>
            </div>

            <!-- Opportunity Type -->
            <div class="field dropdown">
                <select asp-for="Type" class="form-select">
                    @foreach (var item in Enum.GetValues(typeof(OpportunityType)).Cast<OpportunityType>())
                    {
                        <option value="@item">@item.GetDisplayName(culture)</option>
                    }
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

           <!-- Available Countries -->
            <div class="field">
                <label>@Localizer["OpportunityCountries"]</label>
                <div class="countries-checkboxes-grid">
                    @foreach (var country in Model.CountriesSelectList)
                    {
                        <div class="country-checkbox-item">
                            <input class="country-checkbox-input"
                                   type="checkbox"
                                   name="AvailableCountryIds"
                                   value="@country.Value"
                                   id="country_@country.Value"
                                   @(Model.AvailableCountryIds.Contains(int.Parse(country.Value)) ? "checked" : "") />
                            <label class="country-checkbox-label" for="country_@country.Value">
                                @country.Text
                            </label>
                        </div>
                    }
                </div>
                <span asp-validation-for="AvailableCountryIds" class="text-danger"></span>
            </div>

            <!-- Apply Link -->
            <div class="field">
                <label>@Localizer["ApplyLinkLabel"]</label>

                <input asp-for="ApplyLink" placeholder="@Localizer["ApplyLinkPlaceholder"]" required />
                <span asp-validation-for="ApplyLink" class="text-danger"></span>
            </div>

            <!-- Actions -->
            <div class="actions">
                <button type="submit" class="btn-primary">@Localizer["SaveAndAdd"]</button>
                @if (User.IsInRole("Organization"))
                {
                    <a asp-action="OrgOpportunities" class="btn-outline">@Localizer["Cancel"]</a>
                }
                else
                {
                    <a asp-action="Index" class="btn-outline">@Localizer["Cancel"]</a>
                }
            </div>

        </form>
    </div>

    <div class="side-panel">
        <div class="side-bg"></div>
        <div class="side-illustration">
            <img src="~/images/contact_illustration.svg" alt="">
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/quill@1.3.7/dist/quill.snow.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/quill@1.3.7/dist/quill.min.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // ================= Localization Strings =================
        var writeEligibility = "@Localizer["WriteEligibilityAr"]";
        var writeBenefits = "@Localizer["WriteBenefitsAr"]";
         var writeDescription = "@Localizer["WriteDescriptionAr"]";
        var writeDetails = "@Localizer["WriteDetailsAr"]";

        var alertTitle = '@Html.Raw(Localizer["AlertTitle"])';
        var fillRequiredMsg = '@Html.Raw(Localizer["FillRequiredFields"])';
        var fillBeforeSwitchMsg = '@Html.Raw(Localizer["FillBeforeSwitch"])';
        var okText = '@Html.Raw(Localizer["OkButton"])';

        // =================== Initialize All Quill Editors ===================

        // Arabic Editors
        var quillEligibilityAr = new Quill('#editorEligibilityAr', { theme: 'snow', placeholder: writeEligibility });
        var quillBenefitsAr = new Quill('#editorBenefitsAr', { theme: 'snow', placeholder: writeBenefits });
        var quillDescriptionAr = new Quill('#editorDescriptionAr', { theme: 'snow', placeholder: writeDescription });
        var quillAr = new Quill('#editorAr', { theme: 'snow', placeholder: writeDetails });

        // English Editors
        var quillEligibilityEn = new Quill('#editorEligibilityEn', { theme: 'snow', placeholder: writeEligibility });
        var quillBenefitsEn = new Quill('#editorBenefitsEn', { theme: 'snow', placeholder: writeBenefits });
        var quillDescriptionEn = new Quill('#editorDescriptionEn', { theme: 'snow', placeholder: writeDescription });
        var quillEn = new Quill('#editorEn', { theme: 'snow', placeholder: writeDetails });

        // French Editors
        var quillEligibilityFr = new Quill('#editorEligibilityFr', { theme: 'snow', placeholder: writeEligibility });
        var quillBenefitsFr = new Quill('#editorBenefitsFr', { theme: 'snow', placeholder: writeBenefits });
        var quillDescriptionFr = new Quill('#editorDescriptionFr', { theme: 'snow', placeholder: writeDescription });
        var quillFr = new Quill('#editorFr', { theme: 'snow', placeholder: writeDetails });


        // =================== Image Preview ===================
        const imageInput = document.getElementById('imageInput');
        const previewContainer = document.getElementById('imagePreviewContainer');
        const previewImg = document.getElementById('previewImg');

        imageInput.addEventListener('change', function() {
            if (this.files && this.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    previewImg.src = e.target.result;
                    previewContainer.style.display = 'flex';
                    document.getElementById('previewName').textContent = imageInput.files[0].name;
                }
                reader.readAsDataURL(this.files[0]);
            }
        });


        // =================== Copy All Quill Content ===================
        function copyAllQuillToHidden() {
            document.getElementById('eligibilityAr').value = quillEligibilityAr.root.innerHTML.trim();
            document.getElementById('benefitsAr').value = quillBenefitsAr.root.innerHTML.trim();
            document.getElementById('descriptionAr').value = quillDescriptionAr.root.innerHTML.trim();
            document.getElementById('detailAr').value = quillAr.root.innerHTML.trim();

            document.getElementById('eligibilityEn').value = quillEligibilityEn.root.innerHTML.trim();
            document.getElementById('benefitsEn').value = quillBenefitsEn.root.innerHTML.trim();
            document.getElementById('descriptionEn').value = quillDescriptionEn.root.innerHTML.trim();
            document.getElementById('detailEn').value = quillEn.root.innerHTML.trim();

            document.getElementById('eligibilityFr').value = quillEligibilityFr.root.innerHTML.trim();
            document.getElementById('benefitsFr').value = quillBenefitsFr.root.innerHTML.trim();
            document.getElementById('descriptionFr').value = quillDescriptionFr.root.innerHTML.trim();
            document.getElementById('detailFr').value = quillFr.root.innerHTML.trim();
        }


        // =================== Form Submit Validation ===================
        const form = document.getElementById('createForm');
        form.addEventListener('submit', function(e){
            copyAllQuillToHidden();

            var activeTabPane = document.querySelector('.tab-pane.active');
            var requiredFields = activeTabPane.querySelectorAll('[required]');
            var allFilled = true;

            requiredFields.forEach(function(field){
                if(field.type !== 'checkbox' && field.type !== 'radio'){
                    if(!field.value.trim()) allFilled = false;
                }
            });

            if(activeTabPane.id === 'arabic') {
                if(quillEligibilityAr.getText().trim() === '') allFilled = false;
                if(quillBenefitsAr.getText().trim() === '') allFilled = false;
                if(quillDescriptionAr.getText().trim() === '') allFilled = false;
                if(quillAr.getText().trim() === '') allFilled = false;
            }

            if(activeTabPane.id === 'english') {
                if(quillEligibilityEn.getText().trim() === '') allFilled = false;
                if(quillBenefitsEn.getText().trim() === '') allFilled = false;
                if(quillDescriptionEn.getText().trim() === '') allFilled = false;
                if(quillEn.getText().trim() === '') allFilled = false;
            }

            if(activeTabPane.id === 'french') {
                if(quillEligibilityFr.getText().trim() === '') allFilled = false;
                if(quillBenefitsFr.getText().trim() === '') allFilled = false;
                if(quillDescriptionFr.getText().trim() === '') allFilled = false;
                if(quillFr.getText().trim() === '') allFilled = false;
            }

            if(!allFilled){
                e.preventDefault();
                Swal.fire({
                    title: alertTitle,
                    html: fillRequiredMsg,
                    icon: 'warning',
                    confirmButtonText: okText,
                });
            }
        });


        // =================== Prevent Tab Change ===================
        var tabLinks = document.querySelectorAll('#languageTabs a');
        tabLinks.forEach(function(link){
            link.addEventListener('show.bs.tab', function(e){
                copyAllQuillToHidden();

                var activeTabPane = document.querySelector('.tab-pane.active');
                var requiredFields = activeTabPane.querySelectorAll('[required]');
                var allFilled = true;

                requiredFields.forEach(function(field){
                    if(field.type !== 'checkbox' && field.type !== 'radio'){
                        if(!field.value.trim()) allFilled = false;
                    }
                });

                if(!allFilled){
                    e.preventDefault();
                    Swal.fire({
                        title: alertTitle,
                        html: fillBeforeSwitchMsg,
                        icon: 'warning',
                        confirmButtonText: okText,
                    });
                }
            });
        });

    </script>

}

    <style>
        .custom-swal-title {
            color: #333;
            font-size: 24px;
            font-weight: 700;
        }
        
        .custom-swal-text {
            color: #666;
            font-size: 20px;
        }

        .custom-swal-confirm {
            background-color: #F99D27;
            color: white;
            border: none;
            padding: 14px 45px;
            font-size: 18px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin: 0 8px;
            width: 200px;
            height: 65px;
            border-radius: 16px;
        }
        
        .custom-swal-confirm:hover {
            background-color: #e88d1a;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(249, 157, 39, 0.3);
        }
        
        .custom-swal-cancel {
            background-color: white;
            color: #F99D27;
            border: 2px solid #F99D27;
            padding: 14px 45px;
            font-size: 18px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin: 0 8px;
            width: 200px;
            height: 65px;
            border-radius: 16px;
        }
        
        .custom-swal-cancel:hover {
            background-color: #FFF5E6;
            transform: translateY(-2px);
        }
        
        .custom-swal-close {
            color: #999;
            font-size: 28px;
            position: relative;
            left: auto !important;
            right: -93% !important;
        }
        
        .custom-swal-close:hover {
            color: #F99D27;
        }
    </style>
